<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/hintIcon"
        android:layout_width="@dimen/dimen_36dp"
        android:layout_height="@dimen/dimen_36dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/icon_like_red" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_36dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/hintText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_12dp"
            android:textColor="#333333"
            android:textSize="@dimen/dimen_14sp"
            tools:text="展示来电视频" />

        <TextView
            android:id="@+id/hintDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_12dp"
            android:textColor="#999999"
            android:textSize="@dimen/dimen_12sp"
            tools:text="展示来电视频" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/allowIcon"
        android:layout_width="@dimen/dimen_24dp"
        android:layout_height="@dimen/dimen_24dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/icon_fix_fail" />

    <Button
        android:id="@+id/btn_open"
        android:layout_width="@dimen/dimen_52dp"
        android:layout_height="@dimen/dimen_27dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/btn_open_bg"
        android:text="开启"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_14sp"
        android:visibility="gone" />

</LinearLayout>