<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_background">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_55dp"
        android:layout_marginRight="@dimen/dimen_55dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/llytop"
               android:gravity="center"
               android:layout_marginTop="@dimen/dimen_20dp"
               >
            <LinearLayout
                android:id="@+id/lltitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvStartContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="找到"
                    android:textColor="@color/color_171824"
                    android:textSize="@dimen/dimen_17sp"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name_brackets"
                    android:textColor="@color/color_FF3B84"
                    android:textSize="@dimen/dimen_17sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tvOpen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="并开启"
                    android:textColor="@color/color_171824"
                    android:textSize="@dimen/dimen_17sp"
                    android:textStyle="bold" />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/lltitle2"
               android:gravity="center"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvStartContent2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_5dp"
                    android:text="点击“更多已下载的服务”并找到"
                    android:textColor="@color/color_171824"
                    android:textSize="@dimen/dimen_17sp"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvContent2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name_brackets"
                    android:textColor="@color/color_FF3B84"
                    android:textSize="@dimen/dimen_17sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tvOpen2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="并开启"
                    android:textColor="@color/color_171824"
                    android:textSize="@dimen/dimen_17sp"
                    android:textStyle="bold" />
            </LinearLayout>
           </LinearLayout>


            <FrameLayout
                android:id="@+id/flClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/dimen_6dp"
                android:padding="@dimen/dimen_6dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_close_fix" />
            </FrameLayout>

            <ImageView
                android:id="@+id/img_res"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llytop"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:src="@mipmap/img_guide_fix" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>