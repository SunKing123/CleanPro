<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_ad_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="HardcodedText">
    <FrameLayout
        android:id="@+id/ad_im_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.comm.jksdk.widget.TopRoundImageView
            android:id="@+id/ad_im"
            app:fillet="@dimen/dimen_12dp"
            android:layout_width="match_parent"
            android:layout_height="171dp"
            android:scaleType="centerCrop" />
        <ImageView
            android:background="@mipmap/ad_mask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/ad_describe_tv"
            android:lines="1"
            android:textColor="#ffffff"
            android:textSize="@dimen/dimen_15dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginLeft="@dimen/dimen_12dp"
            android:layout_marginRight="@dimen/dimen_12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_80dp"
            android:src="@mipmap/ad_big_img_paly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/dimen_8dp"
            android:layout_marginRight="@dimen/dimen_12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ad_logo"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dimen_16dp"
                android:layout_height="@dimen/dimen_16dp"/>
            <TextView
                android:layout_toRightOf="@+id/ad_logo"
                android:layout_centerVertical="true"
                android:text="广告"
                android:textColor="#ffffff"
                android:textSize="@dimen/dimen_9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </FrameLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_below="@+id/ad_im_layout"
        android:layout_width="match_parent"
        android:layout_height="62dp">
        <ImageView
            android:id="@+id/brand_icon_im"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_width="@dimen/dimen_35dp"
            android:layout_height="@dimen/dimen_35dp"/>
        <TextView
            android:id="@+id/ad_title_tv"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="80dp"
            android:lines="1"
            android:textSize="15dp"
            android:textColor="#404040"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/down_bt"
            android:gravity="center"
            android:textSize="@dimen/dimen_14dp"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:background="@mipmap/ad_download_bg"
            android:layout_width="83dp"
            android:layout_height="@dimen/dimen_35dp"/>
    </RelativeLayout>
    <View
        android:id="@+id/animation_lamp"
        android:layout_width="match_parent"
        android:layout_height="233dp"/>
</RelativeLayout>