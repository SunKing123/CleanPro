<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/insert_ad_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="18dp"
    android:layout_marginRight="18dp"
    android:background="@drawable/insert_screen_ad_round_bg">

    <RelativeLayout
        android:id="@+id/full_screen_insert_ad_header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/insert_screen_ad_header_bg"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/insert_screen_rocket_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="40dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/insert_screen_ad_rocket" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/insert_screen_rocket_icon"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已提速25%"
                android:textColor="#ffffffff"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text="手机运行快如火箭"
                android:textColor="#ffffffff"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/full_screen_insert_ad_show_time_txt"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="9dp"
            android:layout_marginRight="9dp"
            android:background="@drawable/insert_ad_time_count_bg"
            android:gravity="center"
            android:text="3s"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/full_screen_insert_ad_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:padding="9dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/insert_screen_ad_close"
            android:visibility="gone" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/full_screen_insert_ad_view"
        android:layout_width="match_parent"
        android:layout_height="171dp"
        android:layout_margin="11dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@+id/full_screen_insert_ad_header_layout" />


    <RelativeLayout
        android:id="@+id/insert_screen_ad_app_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="11dp"
        android:layout_marginRight="11dp"
        app:layout_constraintTop_toBottomOf="@+id/full_screen_insert_ad_view">

        <com.comm.jksdk.widget.RoundImageView
            android:id="@+id/full_screen_insert_ad_app_icon"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:scaleType="fitCenter"
            app:fillet="@dimen/dimen_14dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/full_screen_insert_ad_app_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/full_screen_insert_ad_app_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="**"
                android:textColor="#ff404040"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/full_screen_insert_ad_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="****"
                android:textColor="#66404040"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/full_screen_insert_ad_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="16dp"
        android:background="@mipmap/insert_screen_ad_download_btn_bg"
        android:gravity="center"
        android:text="下载"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/insert_screen_ad_app_info_layout" />
</androidx.constraintlayout.widget.ConstraintLayout>