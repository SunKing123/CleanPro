<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/insert_ad_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="18dp"
    android:layout_marginRight="18dp"
    android:background="@drawable/insert_screen_ad_round_bg">

    <RelativeLayout
        android:id="@+id/normal_insert_ad_header_layout"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.comm.jksdk.widget.RoundImageView
            android:id="@+id/normal_insert_ad_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            app:fillet="@dimen/dimen_12dp" />

        <TextView
            android:id="@+id/normal_insert_ad_show_time_txt"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="9dp"
            android:layout_marginRight="9dp"
            android:background="@drawable/insert_ad_time_count_bg"
            android:gravity="center"
            android:text="3s"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/normal_insert_ad_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:padding="9dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/insert_screen_ad_close"
            android:visibility="gone" />

        <include
            layout="@layout/include_ad_logo_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>