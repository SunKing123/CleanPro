<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:toos="http://schemas.android.com/tools"
    android:id="@+id/rl_ad_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
  >

    <ImageView
        android:id="@+id/ad_item_image"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginRight="12dp"
        app:layout_constraintDimensionRatio="1.52:1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ad_tv_title"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/ad_logo"
        android:layout_width="@dimen/dimen_16dp"
        android:layout_height="@dimen/dimen_16dp"
        app:layout_constraintBottom_toBottomOf="@+id/ad_item_image"
        app:layout_constraintLeft_toLeftOf="@id/ad_item_image" />

    <TextView
        android:text="广告"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toRightOf="@+id/ad_logo"
        app:layout_constraintBottom_toBottomOf="@+id/ad_logo"
        app:layout_constraintTop_toTopOf="@+id/ad_logo"
        android:textSize="@dimen/dimen_9dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/ad_tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:maxLength="15"
        android:ellipsize="end"
        app:layout_constraintLeft_toRightOf="@id/ad_item_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#404040"
        toos:text="淘宝新势力，全场5折起男神传达新风尚" />

    <TextView
        android:id="@+id/ad_tv_glanceOver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/ad_item_image"
        app:layout_constraintLeft_toLeftOf="@id/ad_tv_title"
        app:layout_constraintRight_toRightOf="parent"
        toos:text="18899人浏览"
        android:alpha="0.4"
        android:textColor="#404040"/>

    <TextView
        android:id="@+id/ad_tv_look"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ad_bg_shape_radio_white_12"
        android:text="立即查看"
        android:textColor="#06C581"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/ad_item_image"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingLeft="@dimen/dimen_11dp"
        android:paddingTop="@dimen/dimen_5dp"
        android:paddingRight="@dimen/dimen_11dp"
        android:paddingBottom="@dimen/dimen_5dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
