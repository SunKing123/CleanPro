<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:toos="http://schemas.android.com/tools"
    android:id="@+id/rl_ad_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ad_item_image"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginRight="5dp"
        app:layout_constraintDimensionRatio="1.52:1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ad_tv_title"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/ad_logo"
        android:layout_width="@dimen/dimen_16dp"
        android:layout_height="@dimen/dimen_16dp"
        app:layout_constraintBottom_toBottomOf="@+id/ad_item_image"
        app:layout_constraintLeft_toLeftOf="@id/ad_item_image" />

    <TextView
        android:id="@+id/ad_tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="2"
        android:textSize="@dimen/sp_20"
        app:layout_constraintLeft_toRightOf="@id/ad_item_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        toos:text="淘宝新势力，全场5折起男神传达新风尚" />

    <TextView
        android:id="@+id/ad_tv_glanceOver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_15"
        app:layout_constraintBottom_toBottomOf="@+id/ad_item_image"
        app:layout_constraintLeft_toLeftOf="@id/ad_tv_title"
        app:layout_constraintRight_toRightOf="parent"
        toos:text="18899人浏览" />

    <TextView
        android:id="@+id/ad_tv_look"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ad_bg_shape_radio_white_12"
        android:text="立即查看"
        android:textColor="#06C581"
        app:layout_constraintBottom_toBottomOf="@+id/ad_item_image"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
