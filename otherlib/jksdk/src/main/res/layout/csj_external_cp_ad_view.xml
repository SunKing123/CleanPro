<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/insert_ad_container"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_width="304dp"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/full_screen_insert_ad_view"
        android:layout_width="match_parent"
        android:layout_height="171dp"
        android:scaleType="centerCrop"/>


    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:id="@+id/insert_screen_ad_app_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp">

        <com.comm.jksdk.widget.RoundImageView
            android:id="@+id/full_screen_insert_ad_app_icon"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:scaleType="fitCenter"
            app:fillet="@dimen/dimen_14dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/full_screen_insert_ad_app_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="**"
                android:textColor="#404040"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/full_screen_insert_ad_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="****"
                android:textColor="#66404040"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/full_screen_insert_ad_download"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/insert_screen_ad_download_btn_bg"
        android:gravity="center"
        android:text="下载"
        android:textColor="@color/white"
        android:textSize="16dp"/>
</LinearLayout>