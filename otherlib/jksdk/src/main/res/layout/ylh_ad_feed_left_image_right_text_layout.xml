<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_ad_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:toos="http://schemas.android.com/tools"
    >

    <com.qq.e.ads.nativ.widget.NativeAdContainer
        android:id="@+id/ad_im_layout"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ad_tv_title"
        app:layout_constraintDimensionRatio="1.52:1"
        android:layout_marginRight="2dp">
    <ImageView
        android:id="@+id/ad_item_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ad_tv_title"
        android:scaleType="fitXY"
        />
    </com.qq.e.ads.nativ.widget.NativeAdContainer>

    <TextView
        android:id="@+id/ad_tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="2"
        android:textSize="17dp"
        app:layout_constraintLeft_toRightOf="@id/ad_im_layout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#404040"
        toos:text="淘宝新势力，全场5折起男神传达新风尚"
        />

    <TextView
        android:id="@+id/ad_tv_glanceOver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/ad_im_layout"
        app:layout_constraintLeft_toLeftOf="@id/ad_tv_title"
        app:layout_constraintRight_toRightOf="parent"
        toos:text="18899人浏览"
        android:alpha="0.4"
        android:textColor="#404040"
        />

    <TextView
        android:id="@+id/ad_tv_look"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ad_bg_shape_radio_white_12"
        android:text="立即查看"
        android:textColor="#06C581"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/ad_im_layout"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingLeft="@dimen/dimen_11dp"
        android:paddingTop="@dimen/dimen_5dp"
        android:paddingRight="@dimen/dimen_11dp"
        android:paddingBottom="@dimen/dimen_5dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
