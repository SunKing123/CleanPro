<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_ad_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="HardcodedText">
    <FrameLayout
        android:id="@+id/ad_im_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ad_im"
            android:layout_width="match_parent"
            android:layout_height="201.5dp"
            android:scaleType="centerCrop" />
        <ImageView
            android:background="@mipmap/angle_ad_mask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/ad_describe_tv"
            android:lines="1"
            android:textColor="#ffffff"
            android:textSize="@dimen/dimen_17dp"
            android:layout_marginTop="@dimen/dimen_7dp"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginRight="@dimen/dimen_16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_gravity="center"
            android:src="@mipmap/ad_big_img_paly"
            android:layout_width="45dp"
            android:layout_height="45dp"/>
    </FrameLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_below="@+id/ad_im_layout"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="42.5dp">
        <ImageView
            android:id="@+id/ad_logo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17.5dp"
            android:layout_width="@dimen/dimen_16dp"
            android:layout_height="@dimen/dimen_16dp"/>
        <TextView
            android:id="@+id/ad_tv"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ad_logo"
            android:layout_marginLeft="3.5dp"
            android:text="广告"
            android:textColor="#5C5C5C"
            android:textSize="@dimen/dimen_9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/ad_title_tv"
            android:layout_toRightOf="@+id/ad_tv"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="100dp"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="12dp"
            android:textColor="#404040"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/down_bt"
            android:gravity="center"
            android:padding="@dimen/dimen_5dp"
            android:textSize="@dimen/dimen_14dp"
            android:textColor="#404040"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>