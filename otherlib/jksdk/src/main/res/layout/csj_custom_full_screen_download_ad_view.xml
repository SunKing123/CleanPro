<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/insert_ad_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/insert_screen_ad_bg">

    <RelativeLayout
        android:id="@+id/full_screen_insert_ad_header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/insert_ad_fullscreen_header_bg"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="43dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/insert_screen_ad_card_bg"
            android:gravity="center"
            android:padding="6dp">

            <ImageView
                android:id="@+id/full_screen_insert_ad_view"
                android:layout_width="match_parent"
                android:layout_height="184dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/full_screen_insert_ad_show_time_txt"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="9dp"
                android:layout_marginRight="9dp"
                android:background="@drawable/insert_ad_time_count_bg"
                android:gravity="center"
                android:text="3s"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/full_screen_insert_ad_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:padding="9dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/insert_screen_ad_close"
                android:visibility="gone" />
            <RelativeLayout
                android:layout_alignBottom="@+id/full_screen_insert_ad_view"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/dimen_8dp"
                android:layout_marginRight="@dimen/dimen_12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ad_logo"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/dimen_16dp"
                    android:layout_height="@dimen/dimen_16dp"/>
                <TextView
                    android:layout_toRightOf="@+id/ad_logo"
                    android:layout_centerVertical="true"
                    android:text="广告"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/dimen_9dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/full_screen_insert_ad_divider"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/full_screen_insert_ad_header_layout" />

    <com.comm.jksdk.widget.RoundImageView
        android:id="@+id/full_screen_insert_ad_app_icon"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:scaleType="fitCenter"
        app:fillet="@dimen/dimen_14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/full_screen_insert_ad_divider" />

    <TextView
        android:id="@+id/full_screen_insert_ad_app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="28dp"
        android:gravity="center"
        android:text="**"
        android:textColor="#ff404040"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@+id/full_screen_insert_ad_app_icon" />

    <TextView
        android:id="@+id/full_screen_insert_ad_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="28dp"
        android:gravity="center"
        android:text="****"
        android:textColor="#66404040"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/full_screen_insert_ad_app_name" />

    <TextView
        android:id="@+id/full_screen_insert_ad_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="30dp"
        android:background="@mipmap/insert_screen_ad_download_btn_bg"
        android:gravity="center"
        android:text="下载"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>