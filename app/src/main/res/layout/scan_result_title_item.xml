<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_type_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_46dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tv_junk_type_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:drawableRight="@drawable/icon_arrow_down"
        android:drawablePadding="@dimen/dimen_3dp"
        android:text="缓存垃圾"
        android:textColor="@color/color_404040"
        android:textSize="@dimen/dimen_16sp" />

    <TextView
        android:id="@+id/tv_checked_junk_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_8dp"
        android:layout_toLeftOf="@+id/iv_check_junk_state"
        android:text="123MB"
        android:textColor="@color/color_404040"
        android:textSize="@dimen/dimen_13sp" />

    <ImageView
        android:id="@+id/iv_check_junk_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:src="@drawable/ic_scan_result_checked" />
</RelativeLayout>