<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_biglogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_100dp"
        android:src="@drawable/splash_logo"
        android:visibility="invisible"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/iv_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:adjustViewBounds="true"
        android:src="@mipmap/splash_font"
        android:visibility="invisible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_15dp"
            android:src="@drawable/welcome" />

        <LinearLayout
            android:id="@+id/skip_layout"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_5dp"
            android:orientation="vertical">

            <com.xiaoniu.cleanking.ui.newclean.view.RoundProgressBar
                android:id="@+id/skip_view"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="@dimen/dimen_16dp"
                android:visibility="invisible"
                app:isShowProgress="false"
                app:progress="100"
                app:progressStr="跳过"
                app:roundColor="@color/colorPrimary"
                app:roundInsideColor="#50000000"
                app:roundProgressColor="@color/color_747474"
                app:roundWidth="1dp"
                app:textProgressColor="@color/white"
                app:textProgressSize="9sp"
                tools:visibility="visible" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>