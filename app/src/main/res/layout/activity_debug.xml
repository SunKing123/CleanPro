<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="#06C581"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_16dp"
                    android:background="@mipmap/icon_left_arrow_white"
                    android:onClick="close"
                    app:layout_constraintBottom_toBottomOf="@id/view_top"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@id/view_top" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_12dp"
                    android:text="调试页面"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_18sp"
                    app:layout_constraintBottom_toBottomOf="@id/view_top"
                    app:layout_constraintLeft_toRightOf="@id/iv_back"
                    app:layout_constraintTop_toTopOf="@id/view_top" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_12dp"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:text="1.跳转协议"
                android:textColor="@color/color_262626"
                android:textSize="@dimen/dimen_16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_50dp"
                    android:layout_weight="1"
                    android:background="@android:color/holo_purple"
                    android:gravity="center"
                    android:onClick="toHomeClean"
                    android:text="首页清理"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_50dp"
                    android:layout_weight="1"
                    android:background="@android:color/holo_orange_dark"
                    android:gravity="center"
                    android:onClick="toHomeTools"
                    android:text="首页工具箱"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_50dp"
                    android:layout_weight="1"
                    android:background="@android:color/holo_blue_dark"
                    android:gravity="center"
                    android:onClick="toHomeNews"
                    android:text="首页头条"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_50dp"
                    android:layout_weight="1"
                    android:background="@android:color/holo_green_dark"
                    android:gravity="center"
                    android:onClick="toHomeMine"
                    android:text="首页我的"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_50dp"
                    android:layout_weight="1"
                    android:background="@color/color_00DA80"
                    android:gravity="center"
                    android:onClick="toH5"
                    android:text="H5协议"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_50dp"
                    android:layout_weight="1"
                    android:background="@color/color_F98EA2"
                    android:gravity="center"
                    android:onClick="toWeChatClean"
                    android:text="微信专清"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_16sp" />

                <TextView
                    android:id="@+id/tv_lottie"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_50dp"
                    android:layout_weight="1"
                    android:background="@color/color_5A6572"
                    android:gravity="center"
                    android:onClick="playLottie"
                    android:text="lottie动画"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_16sp" />

                <TextView
                    android:id="@+id/tv_goto_midas"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_50dp"
                    android:layout_weight="1"
                    android:background="@color/color_89E00F"
                    android:gravity="center"
                    android:onClick="goto_midas"
                    android:text="midas_debug"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_50dp"
                    android:layout_weight="1"
                    android:background="@color/color_00DA80"
                    android:gravity="center"
                    android:onClick="getImei"
                    android:text="获取ImeI"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_16sp" />

                <TextView
                    android:id="@+id/tv_hide_icon"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_50dp"
                    android:layout_weight="1"
                    android:background="@color/color_00DA80"
                    android:gravity="center"
                    android:text="hide_icon"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_16sp" />

                <TextView
                    android:id="@+id/tv_clean"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_50dp"
                    android:layout_weight="1"
                    android:background="@color/color_00DA80"
                    android:gravity="center"
                    android:onClick="cleanCodeTime"
                    android:text="冷启动时间"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_50dp"
                    android:layout_weight="1"
                    android:background="@color/color_00DA80"
                    android:gravity="center"
                    android:onClick="getAdConfig"
                    android:text="广告中心配置"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_16sp" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_50dp"
                    android:layout_weight="1"
                    android:background="@color/color_00DA80"
                    android:gravity="center"
                    android:onClick="gotoFullAd"
                    android:text="外部全屏插屏"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_50dp"
                    android:layout_weight="1"
                    android:background="@color/color_00DA80"
                    android:gravity="center"
                    android:onClick="gotoPop"
                    android:text="外部非全屏插屏"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_50dp"
                    android:layout_weight="1"
                    android:background="@color/color_00DA80"
                    android:gravity="center"
                    android:onClick="getIcon"
                    android:text="加载图标测试"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_16sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_50dp"
                    android:layout_weight="1"
                    android:background="@color/color_00DA80"
                    android:gravity="center"
                    android:onClick="deviceTemp"
                    android:text="电池温度获取"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_50dp"
                    android:layout_weight="1"
                    android:background="@color/color_00DA80"
                    android:gravity="center"
                    android:onClick="powerClick"
                    android:text="电池插屏"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_debug_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电池温度获取"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_16sp" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/view_lottie_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:minHeight="200dp"
                android:scaleType="centerInside"
                app:lottie_autoPlay="true"
                app:lottie_loop="true" />

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"

                android:minHeight="200dp"
                android:scaleType="centerInside"
                app:lottie_autoPlay="true"
                app:lottie_fileName="home_top_scan/state02/data.json"
                app:lottie_imageAssetsFolder="home_top_scan/state02/images"
                app:lottie_loop="true" />

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"

                android:minHeight="200dp"
                android:scaleType="centerInside"
                app:lottie_autoPlay="true"
                app:lottie_fileName="home_top_scan/state03/data.json"
                app:lottie_imageAssetsFolder="home_top_scan/state03/images"
                app:lottie_loop="true" />

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"

                android:scaleType="centerCrop"
                app:lottie_autoPlay="true"
                app:lottie_fileName="charging/charging_state02/data.json"

                app:lottie_imageAssetsFolder="charging/charging_state02/images"
                app:lottie_loop="true" />

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"

                android:scaleType="centerCrop"
                app:lottie_autoPlay="true"
                app:lottie_fileName="charging/charging_state03/data.json"
                app:lottie_imageAssetsFolder="charging/charging_state03/images"
                app:lottie_loop="true" />

            <com.xiaoniu.cleanking.widget.OneKeyCircleBtnView
                android:id="@+id/view_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"></com.xiaoniu.cleanking.widget.OneKeyCircleBtnView>

            <ImageView
                android:id="@+id/icon_app"
                android:layout_width="@dimen/dimen_150dp"
                android:layout_height="@dimen/dimen_50dp"></ImageView>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</LinearLayout>