<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rel_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/view_lottie_top_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        app:lottie_autoPlay="true"
        app:lottie_fileName="home_top_scan/state01/data.json"
        app:lottie_imageAssetsFolder="home_top_scan/state01/images/" />


    <ImageView
        android:id="@+id/tv_top_perview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:id="@+id/linear_text_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_file_total_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0kb"
            android:textColor="@color/color_ffe53238"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_file_total_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_top_text_tag"
            android:textColor="@color/color_666666"
            android:textSize="11sp"
            android:visibility="gone" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rel_bubble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <com.xiaoniu.cleanking.widget.LuckBubbleView
            android:id="@+id/lftop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="25dp"
            app:isAniming="true"
            app:location="1" />

        <com.xiaoniu.cleanking.widget.LuckBubbleView
            android:id="@+id/lfbotm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="18dp"
            android:layout_marginBottom="32dp"
            app:isAniming="true"
            app:location="2" />

        <com.xiaoniu.cleanking.widget.LuckBubbleView
            android:id="@+id/rttop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="23dp"
            android:layout_marginRight="@dimen/dp_18"
            app:isAniming="true"
            app:location="3" />

        <!-- <com.xiaoniu.cleanking.widget.LuckBubbleView
             android:id="@+id/rtbotm"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_alignParentBottom="true"
             android:layout_marginRight="10dp"
             android:layout_marginBottom="35dp"
             app:isAniming="true"
             app:location="10" />-->
        <com.xiaoniu.cleanking.widget.LuckBubbleView
            android:id="@+id/rtbotm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="35dp"
            app:isAniming="true"
            app:location="4" />


    </RelativeLayout>


</RelativeLayout>
