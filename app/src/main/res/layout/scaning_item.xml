<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_46dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tv_scan_cate_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:textColor="@color/color_404040"
        android:textSize="@dimen/dimen_16sp"
        tools:text="@string/cache_clean" />

    <TextView
        android:id="@+id/tv_scaning_junk_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_scaning_state"
        android:textColor="@color/color_404040"
        android:textSize="@dimen/dimen_14sp"
        tools:text="123456kb" />

    <ImageView
        android:id="@+id/iv_scaning_state"
        android:layout_width="@dimen/dimen_21dp"
        android:layout_height="@dimen/dimen_21dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_9dp"
        android:layout_marginRight="@dimen/dimen_16dp" />
</RelativeLayout>