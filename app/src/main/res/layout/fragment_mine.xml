<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_default"
        android:orientation="vertical"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_240dp"
                android:background="@drawable/gradient_head"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/setting_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingRight="@dimen/dimen_15dp"
                    android:src="@mipmap/icon_white_setting" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginTop="@dimen/dimen_60dp"
                    android:layout_marginRight="@dimen/dimen_15dp">

                    <RelativeLayout
                        android:id="@+id/login_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/head_img_iv"
                            android:layout_width="@dimen/dimen_46dp"
                            android:layout_height="@dimen/dimen_46dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/default_head" />

                        <TextView
                            android:id="@+id/phone_num_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dimen_8dp"
                            android:layout_toRightOf="@+id/head_img_iv"
                            android:textColor="@color/color_white_all"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/iv_inter_ad"
                        android:layout_width="@dimen/dimen_56dp"
                        android:layout_height="@dimen/dimen_50dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="fitCenter"
                        android:visibility="gone" />

                    <!--金币提现模块-->
                    <RelativeLayout
                        android:id="@+id/cash_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/login_ll">

                        <LinearLayout
                            android:id="@+id/wallet_ll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:includeFontPadding="false"
                                    android:text="我的金币"
                                    android:textColor="@color/color_222222"
                                    android:textSize="@dimen/dimen_16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="@dimen/dimen_60dp"
                                    android:layout_height="@dimen/dimen_18dp"
                                    android:layout_marginLeft="@dimen/dimen_6dp"
                                    android:background="@drawable/bg_eee_frame_fillet_9"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:text="收入明细"
                                    android:textColor="@color/color_666666"
                                    android:textSize="@dimen/dimen_11dp" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_4dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/gold_coin_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="--"
                                    android:textColor="@color/color_FDBB1D"
                                    android:textSize="@dimen/dimen_30dp" />

                                <TextView
                                    android:id="@+id/coin_about"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dimen_5dp"
                                    android:layout_marginRight="@dimen/dimen_5dp"
                                    android:text="≈"
                                    android:textColor="@color/color_FDBB1D"
                                    android:textSize="@dimen/dimen_24dp"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/coin_unit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="¥"
                                    android:textColor="#FFE83C"
                                    android:textSize="@dimen/dimen_16dp"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/money_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="--"
                                    android:textColor="@color/color_FDBB1D"
                                    android:textSize="@dimen/dimen_20dp"
                                    android:visibility="gone" />
                            </LinearLayout>
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="@dimen/dimen_75dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="@dimen/dimen_10dp">

                            <LinearLayout
                                android:id="@+id/withdrawal_ll"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dimen_28dp"
                                android:layout_centerVertical="true"
                                android:background="@drawable/shape_bg_39b8bb"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/gold_icon" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dimen_2dp"
                                    android:drawableRight="@mipmap/icon_withdraw_right"
                                    android:drawablePadding="4.5dp"
                                    android:text="提现"
                                    android:textColor="@color/color_white_all"
                                    android:textSize="@dimen/dimen_14dp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/iv_withdraw_tips"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_above="@+id/withdrawal_ll"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="@dimen/dimen_4dp"
                                android:src="@mipmap/tixian_img" />
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>


            </RelativeLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_115dp"
                android:layout_marginLeft="@dimen/dimen_14dp"
                android:layout_marginTop="-28dp"
                android:layout_marginRight="@dimen/dimen_14dp"
                android:background="@drawable/bg_white_fillet_06"
                android:paddingLeft="@dimen/dimen_14dp"
                android:paddingRight="@dimen/dimen_14dp">

                <TextView
                    android:id="@+id/tv_award_tag01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:includeFontPadding="false"
                    android:text="限时奖励:"
                    android:textColor="@color/color_222222"
                    android:textSize="@dimen/dimen_16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />



                <ImageView
                    android:id="@+id/iv_golde_01"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/kw1"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/iv_golde_02"
                    app:layout_constraintTop_toBottomOf="@+id/tv_award_tag01" />

                <ImageView
                    android:id="@+id/iv_golde_02"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_50"
                    android:src="@drawable/kw1"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintHorizontal_weight="1"
                    android:layout_marginTop="10dp"
                    app:layout_constraintLeft_toRightOf="@+id/iv_golde_01"
                    app:layout_constraintRight_toRightOf="@+id/iv_golde_03"
                    app:layout_constraintTop_toBottomOf="@+id/tv_award_tag01" />

                <ImageView
                    android:id="@+id/iv_golde_03"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_50"
                    android:src="@drawable/kw1"
                    android:layout_marginTop="10dp"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintLeft_toRightOf="@+id/iv_golde_02"
                    app:layout_constraintRight_toLeftOf="@+id/iv_golde_04"
                    app:layout_constraintTop_toBottomOf="@+id/tv_award_tag01" />

                <ImageView
                    android:id="@+id/iv_golde_04"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_50"
                    android:src="@drawable/kw1"
                    android:layout_marginTop="10dp"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintLeft_toRightOf="@+id/iv_golde_03"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_award_tag01" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <!--更多功能-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_15dp"
                android:background="@drawable/bg_white_fillet_06">

                <ImageView
                    android:id="@+id/iv_more_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_14dp"
                    android:layout_marginTop="@dimen/dimen_11dp"
                    android:src="@mipmap/icon_more_function"
                    android:visibility="gone"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_14dp"
                    android:layout_marginTop="@dimen/dimen_11dp"
                    android:text="更多功能"
                    android:textColor="@color/color_222222"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/view_line_more"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:background="#F0F1F0"
                    app:layout_constraintTop_toBottomOf="@+id/tv_more" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dimen_17dp"
                    android:paddingBottom="@dimen/dimen_16dp"
                    app:layout_constraintTop_toBottomOf="@+id/view_line_more">

                    <LinearLayout
                        android:id="@+id/llt_invite_friend"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dimen_38dp"
                            android:layout_height="@dimen/dimen_38dp"
                            android:src="@mipmap/icon_mine_fun_01" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/dimen_3dp"
                            android:text="权限管理"
                            android:textColor="@color/color_333333"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/body_data_ll"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dimen_38dp"
                            android:layout_height="@dimen/dimen_38dp"
                            android:src="@mipmap/icon_mine_fun_02" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/dimen_3dp"
                            android:text="问题反馈"
                            android:textColor="@color/color_333333"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/step_record_ll"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dimen_38dp"
                            android:layout_height="@dimen/dimen_38dp"
                            android:src="@mipmap/icon_mine_fun_03" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/dimen_3dp"
                            android:text="关于"
                            android:textColor="@color/color_333333"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/kefu_ll"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dimen_38dp"
                            android:layout_height="@dimen/dimen_38dp"
                            android:src="@mipmap/icon_mine_fun_04" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/dimen_3dp"
                            android:text="版本检测"
                            android:textColor="@color/color_333333"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <FrameLayout
                android:id="@+id/mine_ad_ff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_15dp"
                android:background="@drawable/bg_white_fillet_06"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>