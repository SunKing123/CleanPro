<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_default"
        android:orientation="vertical"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_278dp"
                android:background="@drawable/img_mine_head_bg">

                <RelativeLayout
                    android:id="@+id/rel_heal_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15dp">

                    <ImageView
                        android:id="@+id/setting_ll"
                        android:layout_width="@dimen/dimen_20dp"
                        android:layout_height="@dimen/dimen_20dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="@dimen/dimen_15dp"
                        android:src="@mipmap/icon_white_setting" />

                    <RelativeLayout
                        android:id="@+id/login_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/head_img_iv"
                            android:layout_width="@dimen/dimen_32dp"
                            android:layout_height="@dimen/dimen_32dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/default_head" />

                        <TextView
                            android:id="@+id/phone_num_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_toRightOf="@+id/head_img_iv"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/iv_inter_ad"
                        android:layout_width="@dimen/dimen_56dp"
                        android:layout_height="@dimen/dimen_50dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="fitCenter"
                        android:visibility="gone" />

                    <!--金币提现模块-->
                    <RelativeLayout
                        android:id="@+id/cash_rl"
                        android:layout_width="match_parent"
                        android:layout_height="106dp"
                        android:layout_below="@+id/login_ll">

                        <LinearLayout
                            android:id="@+id/wallet_ll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="23dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:includeFontPadding="false"
                                    android:text="我的金币"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sp_14"
                                    android:textStyle="bold" />

                                  <TextView
                                      android:layout_width="@dimen/dimen_60dp"
                                      android:layout_height="@dimen/dimen_18dp"
                                      android:layout_marginLeft="@dimen/dimen_6dp"
                                      android:background="@drawable/bg_eee_frame_fillet_9"
                                      android:gravity="center"
                                      android:includeFontPadding="false"
                                      android:text="收入明细"
                                      android:textColor="@color/white"
                                      android:textSize="@dimen/dimen_11dp" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_4dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/gold_coin_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="--"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/dimen_36dp"
                                    android:textStyle="bold" />

                                <!--        <TextView
                                            android:id="@+id/coin_about"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/dimen_5dp"
                                            android:layout_marginRight="@dimen/dimen_5dp"
                                            android:text="≈"
                                            android:textColor="@color/color_FDBB1D"
                                            android:textSize="@dimen/dimen_24dp"/>-->

                                <!-- <TextView
                                     android:id="@+id/coin_unit"
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="0.02"
                                     android:textColor="#FFE83C"
                                     android:textSize="@dimen/dimen_16dp" />-->

                                <TextView
                                    android:id="@+id/money_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="2dp"
                                    android:text="--"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sp_14" />
                            </LinearLayout>
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="@dimen/dimen_79dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/dimen_10dp"
                            android:paddingBottom="5dp">

                            <ImageView
                                android:id="@+id/iv_withdraw_tips"
                                android:layout_width="54dp"
                                android:layout_height="22dp"
                                android:layout_marginBottom="2dp"
                                android:src="@mipmap/tixian_img" />

                            <LinearLayout
                                android:id="@+id/withdrawal_ll"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_37"
                                android:layout_below="@+id/iv_withdraw_tips"
                                android:background="@drawable/icon_tixian_btn_bg"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/dimen_25dp"
                                    android:layout_height="@dimen/dimen_25dp"
                                    android:src="@drawable/icon_tixian_golde" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_4"
                                    android:text="提现"
                                    android:textColor="@color/color_333333"
                                    android:textSize="@dimen/dimen_14dp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <com.xiaoniu.cleanking.widget.RewardLimiteView
                android:id="@+id/reward_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_143dp"
                android:layout_below="@+id/rel_heal_content"
                android:layout_marginLeft="@dimen/dimen_14dp"
                android:layout_marginTop="-100dp"
                android:layout_marginRight="@dimen/dimen_14dp">

            </com.xiaoniu.cleanking.widget.RewardLimiteView>

            <LinearLayout
                android:id="@+id/rel_card_award"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_below="@+id/reward_view"
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="@dimen/dimen_15dp"
                android:background="@drawable/img_card_award_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"></View>

                <ImageView
                    android:id="@+id/iv_atonce_card"
                    android:layout_width="@dimen/dimen_86dp"
                    android:layout_height="@dimen/dimen_34dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/icon_atone_card"></ImageView>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linear_daliy_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginRight="@dimen/dimen_15dp"
                android:background="@drawable/bg_white_fillet_06"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_award_tag01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="12dp"
                    android:includeFontPadding="false"
                    android:text="日常任务:"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dimen_16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_daliy_task"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dimen_2dp"
                    android:layout_marginBottom="@dimen/dimen_16dp" />
            </LinearLayout>


            <!--更多功能-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_15dp"
                android:background="@drawable/bg_white_fillet_06">

                <ImageView
                    android:id="@+id/iv_more_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_14dp"
                    android:layout_marginTop="@dimen/dimen_11dp"
                    android:src="@mipmap/icon_more_function"
                    android:visibility="gone"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_14dp"
                    android:layout_marginTop="@dimen/dimen_11dp"
                    android:text="更多功能"
                    android:textColor="@color/color_222222"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/view_line_more"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:background="#F0F1F0"
                    app:layout_constraintTop_toBottomOf="@+id/tv_more" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dimen_17dp"
                    android:paddingBottom="@dimen/dimen_16dp"
                    app:layout_constraintTop_toBottomOf="@+id/view_line_more">

                    <LinearLayout
                        android:id="@+id/llt_invite_friend"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dimen_38dp"
                            android:layout_height="@dimen/dimen_38dp"
                            android:src="@mipmap/icon_mine_fun_01" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/dimen_3dp"
                            android:text="权限管理"
                            android:textColor="@color/color_333333"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/body_data_ll"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dimen_38dp"
                            android:layout_height="@dimen/dimen_38dp"
                            android:src="@mipmap/icon_mine_fun_02" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/dimen_3dp"
                            android:text="问题反馈"
                            android:textColor="@color/color_333333"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/step_record_ll"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dimen_38dp"
                            android:layout_height="@dimen/dimen_38dp"
                            android:src="@mipmap/icon_mine_fun_03" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/dimen_3dp"
                            android:text="关于"
                            android:textColor="@color/color_333333"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/kefu_ll"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dimen_38dp"
                            android:layout_height="@dimen/dimen_38dp"
                            android:src="@mipmap/icon_mine_fun_04" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/dimen_3dp"
                            android:text="版本检测"
                            android:textColor="@color/color_333333"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <FrameLayout
                android:id="@+id/mine_ad_ff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_15dp"
                android:background="@drawable/bg_white_fillet_06"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>