<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_275dp"
        android:background="#FF6D58">

        <TextView
            android:id="@+id/tv_virus_result_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_18dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_virus_result_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="发现2项严重问题" />

        <TextView
            android:id="@+id/tv_virus_result_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_6dp"
            android:text="建议马上优化"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_virus_result_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linear_virus_result_privacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_7dp"
        android:layout_marginTop="@dimen/dimen_7dp"
        android:layout_marginRight="@dimen/dimen_7dp"
        android:background="@drawable/shadow"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_virus_result_risk_count_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1项隐私风险"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_17dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="信息，图片及视频可能被偷窥"
            android:textColor="@color/home_content"
            android:textSize="@dimen/dimen_14dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#F7F8FA" />

        <TextView
            android:id="@+id/tv_virus_result_risk_detail_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="*信息被偷窥"
            android:textColor="@color/home_title"
            android:textSize="@dimen/dimen_14dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_virus_result_network"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_7dp"
        android:layout_marginTop="@dimen/dimen_7dp"
        android:layout_marginRight="@dimen/dimen_7dp"
        android:background="@drawable/shadow"
        android:orientation="vertical"
        android:padding="20dp"
        >

        <TextView
            android:id="@+id/tv_virus_result_risk_count_network"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1项网络风险"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_17dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="当前网络存在被偷窥风险"
            android:textColor="@color/home_content"
            android:textSize="@dimen/dimen_14dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#F7F8FA" />

        <TextView
            android:id="@+id/tv_virus_result_risk_detail_network"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="*ARP攻击"
            android:textColor="@color/home_title"
            android:textSize="@dimen/dimen_14dp" />
    </LinearLayout>

</LinearLayout>
