<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_splash_type"
    android:background="@color/white"
    android:orientation="vertical">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <Button
                android:id="@+id/splash_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开屏"
                android:textSize="16sp"/>
            <FrameLayout

                android:layout_width="match_parent"
                android:layout_height="500dp">

            </FrameLayout>

            <Button
                android:id="@+id/banner_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="模板信息流大图"
                android:textSize="16sp"/>
            <FrameLayout
                android:id="@+id/fragment_banner_type"
                android:layout_width="match_parent"
                android:layout_height="200dp">

            </FrameLayout>


            <Button
                android:id="@+id/feed_video_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="模板信息流视频"
                android:textSize="16sp"/>
            <FrameLayout
                android:id="@+id/fragment_feed_video_type"
                android:layout_width="match_parent"
                android:layout_height="200dp">

            </FrameLayout>
            <Button
                android:id="@+id/insert_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="插屏"
                android:textSize="16sp"/>
            <FrameLayout
                android:id="@+id/fragment_insert_type"
                android:layout_width="match_parent"
                android:layout_height="200dp">

            </FrameLayout>
            <!--<Button
                android:id="@+id/full_screen_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="全屏视频"
                android:textSize="16sp"/>
            <FrameLayout
                android:id="@+id/fragment_screen_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </FrameLayout>-->
            <Button
                android:id="@+id/reward_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="激励视频"
                android:textSize="16sp"/>
            <FrameLayout
                android:id="@+id/fragment_reward_type"
                android:layout_width="match_parent"
                android:layout_height="200dp">

            </FrameLayout>
            <Button
                android:id="@+id/native_template_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"

                android:text="原生模板"
                android:textSize="16sp"/>
            <FrameLayout
                android:id="@+id/fragment_template_type"
                android:layout_width="match_parent"
                android:layout_height="200dp">

            </FrameLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>