<?xml version="1.0" encoding="utf-8"?>
<com.xiaoniu.cleanking.widget.ShadowViewCard xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:shadowRound="6dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_temp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="16.5dp"
                android:layout_marginTop="11.5dp"
                android:gravity="left"
                android:textColor="@color/color_323232"
                android:textSize="@dimen/dp_15"
                android:text="@string/weather_video"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_weather_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="18dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:textColor="#ff222222"
                android:alpha="0.5"
                android:textSize="@dimen/sp_12"
                android:text="@string/weather_video_date" />

        </LinearLayout>


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/tv_temp_bg"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:scaleType="fitXY"
            android:src="@drawable/weather_forecast_bg"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="12dp"/>

    </LinearLayout>


</com.xiaoniu.cleanking.widget.ShadowViewCard>