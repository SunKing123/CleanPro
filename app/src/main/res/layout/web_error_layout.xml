<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/error_ly"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C2938"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:clickable="false"
        android:gravity="center"
        android:singleLine="true"
        android:text="页面加载失败"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#626379"
        android:textSize="@dimen/dimen_17sp"
        tools:ignore="HardcodedText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_6dp"
        android:text="请稍后再访问"
        android:textColor="#626379"
        android:textSize="@dimen/dimen_17sp"
        tools:ignore="HardcodedText"/>

    <TextView
        android:id="@+id/tv_reload"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_marginTop="@dimen/dimen_20dp"

        android:gravity="center"
        android:minWidth="110dp"
        android:paddingLeft="@dimen/dimen_23dp"
        android:paddingTop="@dimen/dimen_9dp"
        android:paddingRight="@dimen/dimen_23dp"
        android:paddingBottom="@dimen/dimen_9dp"
        android:text="点击重试"
        android:textColor="#FFFFFF"
        android:textSize="17sp"/>

</LinearLayout>