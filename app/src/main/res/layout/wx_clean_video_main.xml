<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_55dp"
        android:background="@color/color_4690FD"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_24dp"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:src="@mipmap/icon_left_arrow_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_12dp"
            android:text="微信视频"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_18sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp"
        android:background="@color/color_4690FD"
        android:gravity="bottom"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/ll_img_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimen_5dp">

            <TextView
                android:id="@+id/txt_img_chat"
                android:layout_width="@dimen/dimen_100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="聊天视频"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_14sp" />

            <View
                android:id="@+id/view_line_chat"
                android:layout_width="@dimen/dimen_20dp"
                android:layout_height="@dimen/dimen_2dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:background="@color/white" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_img_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimen_5dp">

            <TextView
                android:id="@+id/txt_img_camera"
                android:layout_width="@dimen/dimen_100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="拍摄的视频"
                android:textColor="@color/color_b2ffffff"

                android:textSize="@dimen/dimen_14sp" />

            <View
                android:id="@+id/view_line_img_camera"
                android:layout_width="@dimen/dimen_20dp"
                android:layout_height="@dimen/dimen_2dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:background="@color/white"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_img_save_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimen_5dp">

            <TextView
                android:id="@+id/txt_img_download"
                android:layout_width="@dimen/dimen_100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="保存的视频"
                android:textColor="@color/color_b2ffffff"
                android:textSize="@dimen/dimen_14sp" />

            <View
                android:id="@+id/view_line_img_download"
                android:layout_width="@dimen/dimen_20dp"
                android:layout_height="@dimen/dimen_2dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:background="@color/white"
                android:visibility="invisible" />
        </LinearLayout>


    </LinearLayout>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />


</LinearLayout>