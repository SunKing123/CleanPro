<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_app_bar_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_background"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:background="@color/color_06C581"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_dun"
            android:layout_width="47dp"
            android:layout_height="54dp"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:src="@mipmap/icon_dun" />

        <TextView
            android:id="@+id/tv_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="55sp"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/layout_right_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_4dp"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_clear_finish_gb_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:text="GB"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_ql"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="垃圾已清理"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

   <LinearLayout
       android:layout_width="wrap_content"
       android:orientation="vertical"
       android:visibility="gone"
       android:layout_height="wrap_content">
       <!--一键加速-->
       <ImageView
           android:id="@+id/iv_speed_clean"
           android:layout_width="match_parent"
           android:layout_height="116dp"
           android:layout_below="@+id/text_more_function"
           android:layout_marginLeft="16dp"
           android:layout_marginTop="@dimen/dimen_12dp"
           android:layout_marginRight="@dimen/dimen_16dp"
           android:scaleType="centerCrop"
           android:src="@mipmap/image_main_news" />
       <!--超强省电-->
       <ImageView
           android:id="@+id/iv_power_clean"
           android:layout_width="match_parent"
           android:layout_height="116dp"
           android:layout_below="@+id/view_qq_clean"
           android:layout_marginLeft="16dp"
           android:layout_marginTop="@dimen/dimen_12dp"
           android:layout_marginRight="@dimen/dimen_16dp"
           android:scaleType="centerCrop"
           android:src="@mipmap/image_main_thin" />
       <!--通知栏清理-->
       <ImageView
           android:id="@+id/iv_notification_clean"
           android:layout_width="match_parent"
           android:layout_height="116dp"
           android:layout_below="@+id/view_phone_thin"
           android:layout_marginLeft="16dp"
           android:layout_marginTop="@dimen/dimen_12dp"
           android:layout_marginRight="@dimen/dimen_16dp"
           android:scaleType="centerCrop"
           android:src="@mipmap/image_main_news" />

       <!--微信专清-->
       <ImageView
           android:id="@+id/iv_wechat_clean"
           android:layout_width="match_parent"
           android:layout_height="116dp"
           android:layout_below="@+id/text_more_function"
           android:layout_marginLeft="16dp"
           android:layout_marginTop="@dimen/dimen_12dp"
           android:layout_marginRight="@dimen/dimen_16dp"
           android:scaleType="centerCrop"
           android:src="@mipmap/image_main_thin" />

       <!--文件清理-->
       <ImageView
           android:id="@+id/iv_file_clean"
           android:layout_width="match_parent"
           android:layout_height="116dp"
           android:layout_below="@+id/text_more_function"
           android:layout_marginLeft="16dp"
           android:layout_marginTop="@dimen/dimen_12dp"
           android:layout_marginRight="@dimen/dimen_16dp"
           android:scaleType="centerCrop"
           android:src="@mipmap/image_main_news" />

       <!--手机降温-->
       <ImageView
           android:id="@+id/iv_cooling"
           android:layout_width="match_parent"
           android:layout_height="116dp"
           android:layout_below="@+id/text_more_function"
           android:layout_marginLeft="16dp"
           android:layout_marginTop="@dimen/dimen_12dp"
           android:layout_marginRight="@dimen/dimen_16dp"
           android:scaleType="centerCrop"
           android:layout_marginBottom="@dimen/dimen_16dp"
           android:src="@mipmap/image_main_news" />
   </LinearLayout>

</LinearLayout>