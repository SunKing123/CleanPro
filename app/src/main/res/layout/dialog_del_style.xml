<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:background="@drawable/bg_dialog_del_style"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dimen_24dp"
    android:paddingTop="@dimen/dimen_24dp">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定删除安装包？"
        android:textColor="@color/color_333333"
        android:textStyle="bold"
        android:textSize="@dimen/dimen_16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:layout_marginRight="@dimen/dimen_24dp"
        android:text="永久从设备中删除这些图片，删除后将不可恢复。"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/dimen_14sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="取消"
            android:layout_weight="1"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/dimen_16sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/dimen_16dp"
            android:background="@color/color_EDEDED"/>

        <Button
            android:id="@+id/btn_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_weight="1"
            android:text="删除"
            android:textColor="@color/color_4690FD"
            android:textSize="@dimen/dimen_16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_12dp"/>
</LinearLayout>
