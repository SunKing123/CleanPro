<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_storage_permission_tip_bg">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_storage_permission_tip"
        android:layout_marginTop="85dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_marginTop="25dp"
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请开启存储权限"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_below="@id/image"
        android:layout_centerHorizontal="true"
        android:textSize="22sp"
      />

    <TextView
        android:id="@+id/tv2"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="才能检测到收集垃圾"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_below="@id/tv1"
        android:layout_centerHorizontal="true"
        android:textSize="22sp"
        />

    <RelativeLayout
        android:id="@+id/relat1"
        android:layout_below="@id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="否则将无法使用下列功能"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_centerHorizontal="true">
        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_toLeftOf="@id/tv3"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_storage_permission_left_line">
        </View>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_toRightOf="@id/tv3"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_storage_permission_right_line"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relat1"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="垃圾清理"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/icon_storage_permiss_bucket">

        </TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="微信清理"
            android:drawablePadding="5dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:drawableTop="@mipmap/icon_storage_permiss_wx">

        </TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="抖音快手清理"
            android:drawablePadding="5dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:drawableTop="@mipmap/icon_storage_permiss_video">

        </TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="QQ清理"
            android:drawablePadding="5dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:drawableTop="@mipmap/icon_storage_permiss_qq">

        </TextView>


    </LinearLayout>

    <Button
        android:id="@+id/btn_open_now"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dimen_24dp"
        android:layout_marginRight="@dimen/dimen_24dp"
        android:layout_marginBottom="@dimen/dimen_55dp"
        android:background="@drawable/bg_btn_open_now"
        android:gravity="center|center"
        android:text="立即开启"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_16sp" />

</RelativeLayout>
