<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_16dp"
    android:background="@drawable/bg_game_dialog"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    android:padding="@dimen/dimen_25dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game_gialog_hint1"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dimen_16sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:text="@string/game_gialog_hint2"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/dimen_14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_25dp">

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/tool_cancel"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/dimen_16sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/color_DEDEDE" />

        <TextView
            android:id="@+id/btn_open"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/open"
            android:textColor="@color/color_06C581"
            android:textSize="@dimen/dimen_16sp" />

    </LinearLayout>
</LinearLayout>
