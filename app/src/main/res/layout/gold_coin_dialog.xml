<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="22.5dp"
    android:paddingRight="22.5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_anim"
                android:layout_width="187dp"
                android:layout_height="187dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/kb" />

            <RelativeLayout
                android:id="@+id/ll_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:background="@drawable/ad_top_corner_bg"
                android:minHeight="132dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_top_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="45dp">

                        <TextView
                            android:id="@+id/tv_coin_str"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="恭喜获得"
                            android:textColor="#222222"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/obtain_coin_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingBottom="5dp"
                            android:text="0"
                            android:textColor="#FDBB1D"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="金币"
                            android:textColor="#F7BB00"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_coin_strend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text=""
                            android:textColor="#222222"
                            android:textSize="20sp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tips_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="每日连续签到，奖励不间断哦"
                        android:textColor="#A4A4A4"
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <com.xiaoniu.cleanking.widget.BreathTextView
                        android:id="@+id/see_video_to_double"
                        android:layout_width="@dimen/dimen_219dp"
                        android:layout_height="@dimen/dp_38"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@mipmap/btn_see_video"
                        android:gravity="center"
                        android:text="看视频最高翻10陪"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_14sp"
                        android:textStyle="bold"
                        android:visibility="gone" />


                    <com.xiaoniu.cleanking.widget.BreathTextView
                        android:id="@+id/coin_double_rl"
                        android:layout_width="230dp"
                        android:layout_height="@dimen/dimen_40dp"
                        android:layout_marginTop="@dimen/dp_12"
                        android:background="@mipmap/btn_bg"
                        android:gravity="center"
                        android:text="看视频最高翻10陪"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_14sp"
                        android:textStyle="bold"
                        android:visibility="gone" />


                    <!--  <RelativeLayout
                          android:id="@+id/coin_double_rl"
                          android:layout_width="230dp"
                          android:layout_height="43dp"
                          android:layout_marginTop="12dp"
                          android:visibility="gone">


                          <ImageView
                              android:id="@+id/double_iv"
                              android:layout_width="230dp"
                              android:layout_height="40dp"
                              android:layout_alignParentBottom="true"
                              android:src="@mipmap/btn_bg"
                              android:textSize="@dimen/dimen_15sp"
                              tools:visibility="visible" />

                          <TextView
                              android:id="@+id/double_x2_tv"
                              android:layout_width="30dp"
                              android:layout_height="15dp"
                              android:layout_marginLeft="150dp"
                              android:background="@drawable/bg_coin_double"
                              android:gravity="center"
                              android:text="X2"
                              android:textColor="@color/white"
                              android:textSize="10sp" />

                      </RelativeLayout>-->


                    <LinearLayout
                        android:id="@+id/ll_my_coin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dp"
                            android:drawableRight="@mipmap/gold_icon"
                            android:gravity="center"
                            android:text="我的金币:   "
                            android:textColor="#A4A4A4"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/total_coin_count_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0≈0"
                            android:textColor="#A4A4A4"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_type_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@mipmap/icon_coin_top_02" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/icon_coin_top_01" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_top_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:src="@mipmap/icon_coin_top_03"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_top_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:src="@mipmap/iv_ad_coin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </RelativeLayout>

        <!--中间分隔-->
        <LinearLayout
            android:id="@+id/middle_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/dialog_coin_middle_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal" />
        <!--广告填充-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ad_bottom_corner_bg"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/root_fl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:minHeight="@dimen/dimen_2dp" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_marginTop="7dp">

            <TextView
                android:id="@+id/ad_look_time"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_centerInParent="true"
                android:background="@drawable/coin_ad_ckan_time"
                android:gravity="center"
                android:text="3"
                android:textColor="#ffededed"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/closeDlg"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_centerInParent="true"
                android:layout_gravity="right"
                android:src="@mipmap/close_dialog"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
