<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="22.5dp"
    android:paddingRight="22.5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_anim"
                android:layout_width="187dp"
                android:layout_height="187dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/kb" />

            <RelativeLayout
                android:id="@+id/ll_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:background="@drawable/ad_top_corner_bg"
                android:minHeight="132dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_top_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="45dp">

                        <TextView
                            android:id="@+id/tv_coin_str"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="恭喜获得"
                            android:textColor="#222222"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/obtain_coin_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingBottom="5dp"
                            android:text="0"
                            android:textColor="#FDBB1D"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="金币"
                            android:textColor="#F7BB00"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_coin_strend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text=""
                            android:textColor="#222222"
                            android:textSize="20sp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tips_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="每日连续签到，奖励不间断哦"
                        android:textColor="#A4A4A4"
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/coin_double_rl"
                        android:layout_width="230dp"
                        android:layout_height="43dp"
                        android:layout_marginTop="12dp"
                        android:visibility="gone">


                        <ImageView
                            android:id="@+id/double_iv"
                            android:layout_width="230dp"
                            android:layout_height="40dp"
                            android:layout_alignParentBottom="true"
                            android:src="@mipmap/btn_bg"
                            android:textSize="@dimen/dimen_15sp"
                            tools:visibility="visible" />

                        <TextView
                            android:id="@+id/double_x2_tv"
                            android:layout_width="30dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="150dp"
                            android:background="@drawable/bg_coin_double"
                            android:gravity="center"
                            android:text="X2"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                    </RelativeLayout>


                    <LinearLayout
                        android:id="@+id/ll_my_coin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dp"
                            android:drawableRight="@mipmap/gold_icon"
                            android:gravity="center"
                            android:text="我的金币:   "
                            android:textColor="#A4A4A4"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/total_coin_count_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0≈0"
                            android:textColor="#A4A4A4"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_type_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@mipmap/icon_coin_top_02" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/icon_coin_top_01" />
            </RelativeLayout>
            <ImageView
                android:id="@+id/iv_top_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:src="@mipmap/icon_coin_top_03"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/iv_top_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:src="@mipmap/iv_ad_coin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </RelativeLayout>

        <!--中间分隔-->
        <LinearLayout
            android:id="@+id/middle_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/dialog_coin_middle_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal" />

        <com.qq.e.ads.nativ.widget.NativeAdContainer
            android:id="@+id/native_ad_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ad_bottom_corner_bg"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:id="@+id/ad_root_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/title_fl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ad_small_iv"
                        android:layout_width="26dp"
                        android:layout_height="26dp" />

                    <TextView
                        android:id="@+id/title_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#575757"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/look_info_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="right|center_vertical"
                        android:background="@drawable/shape_corner_5cd0ff"
                        android:gravity="center"
                        android:text="查看详情"
                        android:textColor="#5CD0FF"
                        android:textSize="12sp" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="加载中..."
                        android:textSize="15sp" />
                    <!--优量汇的容器，穿山甲 模板广告的容器-->
                    <FrameLayout
                        android:id="@+id/root_fl"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_margin="3dp" />


                    <!--穿山甲的ImageView-->
                    <ImageView
                        android:id="@+id/ad_iv"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_margin="3dp"
                        android:minHeight="160dp"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/native_insert_ad_logo"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="end|bottom"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="15dp" />

                    <ImageView
                        android:id="@+id/ll_ad_anim"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY" />
                </FrameLayout>

                <TextView
                    android:id="@+id/ad_title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#A4A4A4"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/download_tv"
                    android:layout_width="230dp"
                    android:layout_height="39dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="@mipmap/red_bg"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_15sp"
                    android:textStyle="bold"
                    android:visibility="gone"/>
            </LinearLayout>
        </com.qq.e.ads.nativ.widget.NativeAdContainer>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_marginTop="7dp">

            <TextView
                android:id="@+id/ad_look_time"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_centerInParent="true"
                android:background="@drawable/coin_ad_ckan_time"
                android:gravity="center"
                android:text="3"
                android:textColor="#ffededed"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/closeDlg"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_centerInParent="true"
                android:layout_gravity="right"
                android:src="@mipmap/close_dialog"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>