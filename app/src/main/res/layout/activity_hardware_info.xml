<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_F7F8FA"
              android:orientation="vertical">

    <include
        layout="@layout/layout_titlebar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <TextView
                android:text="电池"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_marginBottom="@dimen/dimen_16dp"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:textSize="@dimen/dimen_16sp"
                android:drawableLeft="@mipmap/icon_battery"
                android:drawablePadding="@dimen/dimen_8dp"
                android:textColor="@color/color_333333"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            
            <View
                android:background="@color/color_DEDEDE"
                android:layout_marginLeft="@dimen/dimen_44dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <TextView
                android:id="@+id/text_battery_status"
                android:text="充电状态:"
                android:textSize="@dimen/dimen_13dp"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:layout_marginBottom="@dimen/dimen_12dp"
                android:layout_marginLeft="@dimen/dimen_44dp"
                android:textColor="@color/color_333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:background="@color/color_DEDEDE"
                android:layout_marginLeft="@dimen/dimen_44dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <TextView
                android:id="@+id/text_battery_level"
                android:text="电量剩余:"
                android:textSize="@dimen/dimen_13dp"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:layout_marginBottom="@dimen/dimen_12dp"
                android:layout_marginLeft="@dimen/dimen_44dp"
                android:textColor="@color/color_333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:background="@color/color_DEDEDE"
                android:layout_marginLeft="@dimen/dimen_44dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <TextView
                android:text="*充电或快速耗电会导致发热"
                android:textSize="@dimen/dimen_12sp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_marginBottom="@dimen/dimen_16dp"
                android:layout_marginLeft="@dimen/dimen_44dp"
                android:textColor="@color/color_999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_12dp"
                android:background="@color/color_F7F8FA"/>

            <TextView
                android:text="无线模块"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_marginBottom="@dimen/dimen_16dp"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:textSize="@dimen/dimen_16sp"
                android:drawableLeft="@mipmap/icon_wifi"
                android:drawablePadding="@dimen/dimen_8dp"
                android:textColor="@color/color_333333"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:background="@color/color_DEDEDE"
                android:layout_marginLeft="@dimen/dimen_44dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:layout_marginBottom="@dimen/dimen_12dp"
                android:layout_marginLeft="@dimen/dimen_44dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:orientation="horizontal">
            <TextView
                android:text="蓝牙模块:"
                android:textSize="@dimen/dimen_13dp"
                android:textColor="@color/color_333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/text_bluetooth_status"
                    android:text="已开启"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:textSize="@dimen/dimen_13dp"
                    android:textColor="@color/color_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/text_bluetooth_close"
                    android:gravity="right"
                    android:text="关闭蓝牙"
                    android:textColor="@color/color_4690FD"
                    android:drawableRight="@mipmap/icon_more"
                    android:drawablePadding="@dimen/dimen_8dp"
                    android:textSize="@dimen/dimen_13dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <View
                android:background="@color/color_DEDEDE"
                android:layout_marginLeft="@dimen/dimen_44dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:layout_marginBottom="@dimen/dimen_12dp"
                android:layout_marginLeft="@dimen/dimen_44dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:orientation="horizontal">
                <TextView
                    android:text="GPS开关:"
                    android:textSize="@dimen/dimen_13dp"
                    android:textColor="@color/color_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/text_gps_status"
                    android:text="已开启"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:textSize="@dimen/dimen_13dp"
                    android:textColor="@color/color_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/text_gps_close"
                    android:gravity="right"
                    android:text="关闭GPS"
                    android:textColor="@color/color_4690FD"
                    android:drawableRight="@mipmap/icon_more"
                    android:drawablePadding="@dimen/dimen_8dp"
                    android:textSize="@dimen/dimen_13dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <View
                android:background="@color/color_DEDEDE"
                android:layout_marginLeft="@dimen/dimen_44dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:layout_marginBottom="@dimen/dimen_12dp"
                android:layout_marginLeft="@dimen/dimen_44dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:orientation="horizontal">
                <TextView
                    android:text="WiFi开关:"
                    android:textSize="@dimen/dimen_13dp"
                    android:textColor="@color/color_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/text_wifi_status"
                    android:text="已开启"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:textSize="@dimen/dimen_13dp"
                    android:textColor="@color/color_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/text_wifi_close"
                    android:gravity="right"
                    android:text="关闭Wi-Fi"
                    android:textColor="@color/color_4690FD"
                    android:drawableRight="@mipmap/icon_more"
                    android:drawablePadding="@dimen/dimen_8dp"
                    android:textSize="@dimen/dimen_13dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <View
                android:background="@color/color_DEDEDE"
                android:layout_marginLeft="@dimen/dimen_44dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <TextView
                android:text="*长期或反复开启会导致发热"
                android:textSize="@dimen/dimen_12sp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_marginBottom="@dimen/dimen_16dp"
                android:layout_marginLeft="@dimen/dimen_44dp"
                android:textColor="@color/color_999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_12dp"
                android:background="@color/color_F7F8FA"/>

            <TextView
                android:text="CPU"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_marginBottom="@dimen/dimen_16dp"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:textSize="@dimen/dimen_16sp"
                android:drawableLeft="@mipmap/icon_cpu"
                android:drawablePadding="@dimen/dimen_8dp"
                android:textColor="@color/color_333333"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:background="@color/color_DEDEDE"
                android:layout_marginLeft="@dimen/dimen_44dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <TextView
                android:id="@+id/text_cpu_type"
                android:text="CPU型号:"
                android:textSize="@dimen/dimen_13dp"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:layout_marginBottom="@dimen/dimen_12dp"
                android:layout_marginLeft="@dimen/dimen_44dp"
                android:textColor="@color/color_333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:background="@color/color_DEDEDE"
                android:layout_marginLeft="@dimen/dimen_44dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <TextView
                android:id="@+id/text_cpu_cores"
                android:text="CPU核心数:"
                android:textSize="@dimen/dimen_13dp"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:layout_marginBottom="@dimen/dimen_12dp"
                android:layout_marginLeft="@dimen/dimen_44dp"
                android:textColor="@color/color_333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:background="@color/color_DEDEDE"
                android:layout_marginLeft="@dimen/dimen_44dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <TextView
                android:id="@+id/text_cpu_load"
                android:text="CPU负载:"
                android:textSize="@dimen/dimen_13dp"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:layout_marginBottom="@dimen/dimen_12dp"
                android:layout_marginLeft="@dimen/dimen_44dp"
                android:textColor="@color/color_333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:background="@color/color_DEDEDE"
                android:layout_marginLeft="@dimen/dimen_44dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <TextView
                android:text="*高负载会导致发热"
                android:textSize="@dimen/dimen_12sp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_marginBottom="@dimen/dimen_16dp"
                android:layout_marginLeft="@dimen/dimen_44dp"
                android:textColor="@color/color_999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_12dp"
                android:background="@color/color_F7F8FA"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
