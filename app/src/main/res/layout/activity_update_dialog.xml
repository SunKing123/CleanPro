<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="290dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dimen_8dp"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="false"
        app:contentPadding="0dp">
        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="290dp"
                android:layout_height="150dp">

                <ImageView
                    android:layout_width="290dp"
                    android:layout_height="150dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/gengxinzhong" />

                <TextView
                    android:id="@+id/update_version_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="67dp"
                    android:text="V 1.1.0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_16sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/update_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:lineSpacingMultiplier="1.2"
                android:paddingLeft="28dp"
                android:paddingRight="28dp"
                android:text="Warning:nuclear silo detected.\nWarning:nuclear silo detected.\nWarning:nuclear silo detected.\nWarning:nuclear silo detected.\nWarning:nuclear silo detected."
                android:textColor="#7C7A7A"
                android:textSize="@dimen/dimen_14sp" />

            <TextView
                android:id="@+id/update_id_ok"
                android:layout_width="234dp"
                android:layout_height="44dp"
                android:layout_marginBottom="@dimen/dimen_28dp"
                android:layout_marginLeft="@dimen/dimen_28dp"
                android:layout_marginRight="@dimen/dimen_28dp"
                android:layout_marginTop="30dp"
                android:background="@mipmap/ljsq"
                android:gravity="center"
                android:lineSpacingMultiplier="1.2"
                android:paddingBottom="@dimen/dimen_9dp"
                android:paddingTop="@dimen/dimen_9dp"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_18sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <ImageView
        android:id="@+id/update_id_cancel"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_31dp"
        android:src="@mipmap/close" />
</LinearLayout>
