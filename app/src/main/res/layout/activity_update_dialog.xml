<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="274dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cardv"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_65dp"
        app:cardCornerRadius="@dimen/dimen_6dp"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="false"
        app:contentPadding="0dp">


        <LinearLayout
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="92dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发现新版本"
                    android:textColor="#323232"
                    android:textSize="@dimen/dimen_16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/update_version_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="V1.1.0"
                    android:textColor="#4690fd"
                    android:textSize="@dimen/dimen_16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:lineSpacingMultiplier="1.2"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="99%的用户已升级"
                android:textColor="#B2B2B2"
                android:textSize="@dimen/dimen_14sp" />

            <TextView
                android:id="@+id/update_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:lineSpacingMultiplier="1.2"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Warning:nuclear silo detected.\nWarning:nuclear silo detected.\nWarning:nuclear silo detected.\nWarning:nuclear silo detected.\nWarning:nuclear silo detected."
                android:textColor="#7C7A7A"
                android:textSize="@dimen/dimen_14sp" />

            <TextView
                android:id="@+id/update_id_ok"
                android:layout_width="234dp"
                android:layout_height="53dp"
                android:layout_marginBottom="@dimen/dimen_15dp"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:layout_marginTop="30dp"
                android:background="@mipmap/ljsq"
                android:gravity="center"
                android:lineSpacingMultiplier="1.2"
                android:paddingBottom="@dimen/dimen_9dp"
                android:paddingTop="@dimen/dimen_9dp"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_18sp" />
        </LinearLayout>


    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/update_id_cancel"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_below="@id/cardv"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_25dp"
        android:src="@mipmap/close" />

    <ImageView
        android:layout_width="178dp"
        android:layout_height="143dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/icon_fj" />
</RelativeLayout>
