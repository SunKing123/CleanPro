<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/v_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="@dimen/dimen_16dp"
    android:paddingTop="@dimen/dp_18"
    android:paddingRight="@dimen/dimen_16dp"
    android:paddingBottom="@dimen/dp_18">


    <ImageView
        android:id="@+id/iv_action_icon"
        android:layout_width="@dimen/dimen_43dp"
        android:layout_height="@dimen/dimen_43dp"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:id="@+id/linear_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_luck_award"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_kw00" />

            <TextView
                android:id="@+id/tv_luck_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+50"
                android:layout_marginLeft="@dimen/dp_2"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_action_button"
            android:layout_width="64dp"
            android:layout_height="24dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/icon_atonce_award"
          />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/tv_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_4dp"
        android:layout_toLeftOf="@+id/linear_right"
        android:layout_toRightOf="@+id/iv_action_icon"
        android:gravity="left|center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_action_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="20"
            android:maxLines="1"
            android:text="测试时测试时测试时测试时"
            android:textStyle="bold"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_16sp" />

        <TextView
            android:id="@+id/tv_action_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:ellipsize="end"
            android:maxLength="30"
            android:maxLines="2"
            android:text="测试时测试时测试时测试时测试时"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/dimen_14sp" />
    </LinearLayout>

</RelativeLayout>
