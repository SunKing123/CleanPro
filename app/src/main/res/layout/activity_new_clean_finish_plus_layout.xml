<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70dp"
        android:background="@drawable/finish_top_bg">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/left_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/dimen_12dp"
            android:layout_marginBottom="3dp"
            android:drawableStart="@mipmap/finish_top_back"
            android:drawablePadding="8dp"
            android:text="一键加速"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_20sp" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.xiaoniu.cleanking.ui.finish.view.FinishHeadView
                android:id="@+id/finish_headView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_105dp"
                android:background="@drawable/finish_top_bg"
                android:orientation="vertical"
                android:layout_marginBottom="9dp"
                />
            <com.xiaoniu.cleanking.ui.finish.view.FinishCardView
                android:id="@+id/card_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="7dp" />

            <FrameLayout
                android:id="@+id/ad_container_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="13dp"
                android:layout_marginBottom="9dp"
                android:visibility="gone"/>

            <com.xiaoniu.cleanking.ui.finish.view.FinishCardView
                android:id="@+id/card_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="7dp"
                />

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/finish_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_136dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/finish_pic_card_bg" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:layout_marginBottom="@dimen/dimen_20dp"
                    android:text="最高可中\n888元现金"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_24sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:background="@mipmap/finish_card_corner_mark"
                    android:gravity="center_horizontal"
                    android:paddingTop="@dimen/dimen_5dp"
                    android:text="永久免费"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_14sp" />
            </RelativeLayout>

            <FrameLayout
                android:id="@+id/ad_container_2"
                android:layout_width="match_parent"
                android:layout_marginTop="9dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="13dp"
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
