<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8FA"
    android:orientation="vertical">

    <com.xiaoniu.cleanking.ui.securitycenter.view.RecommendBarView
        android:id="@+id/recommend_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/shadow"
        android:paddingLeft="9dp"
        android:paddingTop="5dp"
        android:paddingRight="9dp"
        android:paddingBottom="12dp" />

    <FrameLayout
        android:id="@+id/ad_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="@dimen/main_home_marginTop"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" />

    <com.xiaoniu.cleanking.ui.securitycenter.view.FunctionGridView
        android:id="@+id/function_gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/shadow"
        android:paddingLeft="6dp"
        android:paddingTop="15dp"
        android:paddingRight="6dp"
        android:paddingBottom="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/ad_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="@dimen/main_home_marginTop"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" />

    <com.xiaoniu.cleanking.ui.securitycenter.view.FunctionBarView
        android:id="@+id/bar_camera"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="@drawable/shadow"
        android:paddingLeft="9dp"
        android:paddingTop="5dp"
        android:paddingRight="9dp"
        android:paddingBottom="12dp" />

    <com.xiaoniu.cleanking.ui.securitycenter.view.FunctionBarView
        android:id="@+id/bar_battery"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="@drawable/shadow"
        android:paddingLeft="9dp"
        android:paddingTop="5dp"
        android:paddingRight="9dp"
        android:paddingBottom="12dp" />

    <com.xiaoniu.cleanking.ui.securitycenter.view.FunctionBarView
        android:id="@+id/bar_red_packet"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="@drawable/shadow"
        android:paddingLeft="9dp"
        android:paddingTop="5dp"
        android:paddingRight="9dp"
        android:paddingBottom="12dp" />

    <FrameLayout
        android:id="@+id/ad_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="@dimen/main_home_marginTop"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" />
</LinearLayout>
