<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_photo_filelist_pic"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_marginBottom="@dimen/dimen_16dp"
        android:scaleType="fitXY"
        android:src="@mipmap/applogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_8dp"
        android:textColor="#333333"
        app:layout_constraintBottom_toBottomOf="@id/iv_photo_filelist_pic"
        app:layout_constraintLeft_toRightOf="@id/iv_photo_filelist_pic"
        app:layout_constraintTop_toTopOf="@id/iv_photo_filelist_pic" />

    <TextView
        android:id="@+id/tv_select"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginLeft="@dimen/dimen_8dp"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:background="@drawable/icon_select"
        android:textColor="#333333"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/iv_photo_filelist_pic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_photo_filelist_pic" />

    <TextView
        android:id="@+id/tv_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_12dp"
        android:text="600MB"
        android:textColor="#333333"
        android:textSize="13sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/iv_photo_filelist_pic"
        app:layout_constraintRight_toLeftOf="@id/tv_select"
        app:layout_constraintTop_toTopOf="@id/iv_photo_filelist_pic" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:background="#EDEDED"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_photo_filelist_pic" />
</android.support.constraint.ConstraintLayout>