<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_203dp"
        android:background="@drawable/gradient_head">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dimen_45dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_coin"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/iv_ad_coin" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_6dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_coin_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="恭喜您翻倍成功"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_15dp" />

                <TextView
                    android:id="@+id/tv_coin_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_6dp"
                    android:text="到账500个金币"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_18dp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/btnLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="@dimen/dimen_17dp"
        android:src="@drawable/common_icon_back_arrow_white" />


    <FrameLayout
        android:id="@+id/ad_frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_173dp"
        android:layout_marginRight="@dimen/dimen_15dp"
        android:background="@color/white" />
</RelativeLayout>
