<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_203dp"
        android:background="@drawable/gradient_head">

        <ImageView
            android:id="@+id/image_coin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="4dp"
            android:src="@mipmap/iv_ad_coin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_coin_title"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_coin_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="恭喜您翻倍成功"
            android:layout_marginLeft="@dimen/dimen_6dp"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_16dp"
            app:layout_constraintLeft_toRightOf="@+id/image_coin"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/image_coin" />

        <TextView
            android:id="@+id/tv_coin_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="到账500个金币"
            android:layout_marginTop="@dimen/dimen_6dp"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_18dp"
            app:layout_constraintBottom_toBottomOf="@+id/image_coin"
            app:layout_constraintStart_toStartOf="@+id/tv_coin_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/btnLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="@dimen/dimen_17dp"
        android:src="@drawable/common_icon_back_arrow_white" />


    <FrameLayout
        android:id="@+id/ad_frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_173dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:background="@color/white" />
</RelativeLayout>
