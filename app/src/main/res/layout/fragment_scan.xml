<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_shadow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_310dp">

                <ImageView
                    android:id="@+id/iv_scanning_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottie_animation_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:lottie_autoPlay="true"
                    app:lottie_fileName="scanning_junk/data.json"
                    app:lottie_imageAssetsFolder="scanning_junk/images/"
                    app:lottie_loop="true" />

                <com.xiaoniu.cleanking.widget.FuturaRoundTextView
                    android:id="@+id/tv_junk_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tv_junk_unit"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="-14dp"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/dimen_90sp"
                    tools:text="102" />

                <com.xiaoniu.cleanking.widget.FuturaRoundTextView
                    android:id="@+id/tv_junk_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tv_scanning_progress_file"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/dimen_24dp"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/dimen_32sp"
                    tools:text="MB" />

                <TextView
                    android:id="@+id/tv_scanning_progress_file"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/dimen_24dp"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/dimen_16sp"
                    tools:text="扫描: com.huawei.android.airsharing" />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_content_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:itemCount="5"
                tools:listitem="@layout/scaning_item" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_42dp"
        android:drawableLeft="@drawable/common_icon_back_arrow_white"
        android:drawablePadding="@dimen/dimen_10dp"
        android:padding="@dimen/dimen_12dp"
        android:text="@string/scaning"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dimen_20sp" />

    <ImageView
        android:id="@+id/bottom_shadow"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_above="@+id/rl_toolkit"
        android:layout_gravity="bottom"
        android:background="@mipmap/wl"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/rl_toolkit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_68dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_stop_clean"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_46dp"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginRight="@dimen/dimen_16dp"
            android:background="@drawable/sp_scaning_btn_bg"
            android:gravity="center"
            android:text="@string/stop_scan"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/dimen_16sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>