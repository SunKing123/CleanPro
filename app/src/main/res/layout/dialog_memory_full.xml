<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:background="@drawable/bg_dialog_del_style"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dimen_24dp"
    android:paddingTop="@dimen/dimen_24dp">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="导出到相册失败，手机空间已满"
        android:textColor="@color/color_333333"
        android:textStyle="bold"
        android:textSize="@dimen/dimen_16sp" />

    <TextView
        android:id="@+id/txt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:layout_marginRight="@dimen/dimen_24dp"
        android:text="永久从设备中删除这些图片，删除后将不可恢复。"
        android:textColor="@color/color_666666"
        android:visibility="gone"
        android:textSize="@dimen/dimen_14sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_weight="1"
            android:gravity="right|center"
            android:text="知道了"
            android:layout_marginRight="@dimen/dimen_24dp"
            android:textColor="@color/color_4690FD"
            android:textSize="@dimen/dimen_16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_12dp"/>
</LinearLayout>
