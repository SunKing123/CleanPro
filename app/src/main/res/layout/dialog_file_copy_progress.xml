<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:background="@drawable/bg_dialog_del_style"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dimen_24dp"
    android:paddingTop="@dimen/dimen_24dp">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="聊天图片"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dimen_16sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:layout_marginRight="@dimen/dimen_24dp"
        android:text="正在导出聊天图片，请稍等…"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/dimen_14sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ProgressBar
            android:id="@+id/prgress_bar"
            android:layout_width="match_parent"
            android:max="100"
            android:progress="1"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/bg_progress_bar"
            android:layout_height="2dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_24dp" />
</LinearLayout>
