<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_16dp"
        android:background="@drawable/bg_shape_radio_white_12"
        android:orientation="vertical">
        <!--一键加速-->
        <RelativeLayout
            android:id="@+id/v_quicken"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_16dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_quicken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_home_qq_r" />

            <TextView
                android:id="@+id/tv_quicken_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_12dp"
                android:layout_toRightOf="@+id/iv_quicken"
                android:text="@string/tool_one_key_speed"
                android:textColor="@color/color_404040"
                android:textSize="@dimen/dimen_17sp" />

            <TextView
                android:id="@+id/tv_quicken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_quicken_title"
                android:layout_marginLeft="@dimen/dimen_12dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_toRightOf="@+id/iv_quicken"
                android:text="@string/internal_storage_scale_hint"
                android:textColor="@color/color_FF4545"
                android:textSize="@dimen/dimen_14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_shape_radio_black_13"
                android:paddingLeft="@dimen/dimen_11dp"
                android:paddingTop="@dimen/dimen_5dp"
                android:paddingRight="@dimen/dimen_11dp"
                android:paddingBottom="@dimen/dimen_5dp"
                android:text="@string/quicken_now"
                android:textColor="@color/color_777777"
                android:textSize="@dimen/dimen_12sp" />
        </RelativeLayout>

        <View
            android:id="@+id/line_quicken"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginRight="@dimen/dimen_16dp"
            android:background="@color/color_F7F7F7"
            android:visibility="gone" />
        <!--超强省电-->
        <RelativeLayout
            android:id="@+id/v_power"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_16dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_power" />

            <TextView
                android:id="@+id/tv_power_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_12dp"
                android:layout_toRightOf="@+id/iv_power"
                android:text="@string/tool_super_power_saving"
                android:textColor="@color/color_404040"
                android:textSize="@dimen/dimen_17sp" />

            <TextView
                android:id="@+id/tv_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_power_title"
                android:layout_marginLeft="@dimen/dimen_12dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_toRightOf="@+id/iv_power"
                android:text="@string/power_consumption_thread"
                android:textColor="@color/color_BABABA"
                android:textSize="@dimen/dimen_14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_shape_radio_black_13"
                android:paddingLeft="@dimen/dimen_11dp"
                android:paddingTop="@dimen/dimen_5dp"
                android:paddingRight="@dimen/dimen_11dp"
                android:paddingBottom="@dimen/dimen_5dp"
                android:text="@string/power_now"
                android:textColor="@color/color_777777"
                android:textSize="@dimen/dimen_12sp" />
        </RelativeLayout>

        <View
            android:id="@+id/line_power"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginRight="@dimen/dimen_16dp"
            android:background="@color/color_F7F7F7"
            android:visibility="gone" />
        <!--通知栏清理-->
        <RelativeLayout
            android:id="@+id/v_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_16dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_home_qq" />

            <TextView
                android:id="@+id/tv_notification_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_12dp"
                android:layout_toRightOf="@+id/iv_notification"
                android:text="@string/tool_notification_clean"
                android:textColor="@color/color_404040"
                android:textSize="@dimen/dimen_17sp" />

            <TextView
                android:id="@+id/tv_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_notification_title"
                android:layout_marginLeft="@dimen/dimen_12dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_toRightOf="@+id/iv_notification"
                android:text="@string/power_consumption_thread"
                android:textColor="@color/color_BABABA"
                android:textSize="@dimen/dimen_14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_shape_radio_black_13"
                android:paddingLeft="@dimen/dimen_11dp"
                android:paddingTop="@dimen/dimen_5dp"
                android:paddingRight="@dimen/dimen_11dp"
                android:paddingBottom="@dimen/dimen_5dp"
                android:text="@string/tool_now_clean"
                android:textColor="@color/color_777777"
                android:textSize="@dimen/dimen_12sp" />
        </RelativeLayout>

        <View
            android:id="@+id/line_notification"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginRight="@dimen/dimen_16dp"
            android:background="@color/color_F7F7F7"
            android:visibility="gone" />
        <!--微信专清-->
        <RelativeLayout
            android:id="@+id/v_wechat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_16dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_home_wx" />

            <TextView
                android:id="@+id/tv_wechat_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_12dp"
                android:layout_toRightOf="@+id/iv_wechat"
                android:text="@string/tool_chat_clear"
                android:textColor="@color/color_404040"
                android:textSize="@dimen/dimen_17sp" />

            <TextView
                android:id="@+id/tv_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_wechat_title"
                android:layout_marginLeft="@dimen/dimen_12dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_toRightOf="@+id/iv_wechat"
                android:text="@string/find_cache_garbage"
                android:textColor="@color/color_BABABA"
                android:textSize="@dimen/dimen_14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_shape_radio_black_13"
                android:paddingLeft="@dimen/dimen_11dp"
                android:paddingTop="@dimen/dimen_5dp"
                android:paddingRight="@dimen/dimen_11dp"
                android:paddingBottom="@dimen/dimen_5dp"
                android:text="@string/tool_now_clean"
                android:textColor="@color/color_777777"
                android:textSize="@dimen/dimen_12sp" />
        </RelativeLayout>

        <View
            android:id="@+id/line_wechat"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginRight="@dimen/dimen_16dp"
            android:background="@color/color_F7F7F7"
            android:visibility="gone" />
        <!--文件清理-->
        <RelativeLayout
            android:id="@+id/v_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_16dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_wjql" />

            <TextView
                android:id="@+id/tv_file_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_12dp"
                android:layout_toRightOf="@+id/iv_file"
                android:text="@string/file_clean"
                android:textColor="@color/color_404040"
                android:textSize="@dimen/dimen_17sp" />

            <TextView
                android:id="@+id/tv_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_file_title"
                android:layout_marginLeft="@dimen/dimen_12dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_toRightOf="@+id/iv_file"
                android:text="@string/find_apk"
                android:textColor="@color/color_BABABA"
                android:textSize="@dimen/dimen_14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_shape_radio_black_13"
                android:paddingLeft="@dimen/dimen_11dp"
                android:paddingTop="@dimen/dimen_5dp"
                android:paddingRight="@dimen/dimen_11dp"
                android:paddingBottom="@dimen/dimen_5dp"
                android:text="@string/tool_now_clean"
                android:textColor="@color/color_777777"
                android:textSize="@dimen/dimen_12sp" />
        </RelativeLayout>

        <View
            android:id="@+id/line_file"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginRight="@dimen/dimen_16dp"
            android:background="@color/color_F7F7F7"
            android:visibility="gone" />
        <!--手机降温-->
        <RelativeLayout
            android:id="@+id/v_cool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_16dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_cool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_home_jw" />

            <TextView
                android:id="@+id/tv_file_cool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_12dp"
                android:layout_toRightOf="@+id/iv_cool"
                android:text="@string/tool_phone_temperature_low"
                android:textColor="@color/color_404040"
                android:textSize="@dimen/dimen_17sp" />

            <TextView
                android:id="@+id/tv_cool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_file_cool"
                android:layout_marginLeft="@dimen/dimen_12dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_toRightOf="@+id/iv_cool"
                android:text="@string/cpu_height"
                android:textColor="@color/color_BABABA"
                android:textSize="@dimen/dimen_14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_shape_radio_black_13"
                android:paddingLeft="@dimen/dimen_11dp"
                android:paddingTop="@dimen/dimen_5dp"
                android:paddingRight="@dimen/dimen_11dp"
                android:paddingBottom="@dimen/dimen_5dp"
                android:text="@string/text_cool"
                android:textColor="@color/color_777777"
                android:textSize="@dimen/dimen_12sp" />
        </RelativeLayout>
    </LinearLayout>

    <com.qq.e.ads.nativ.widget.NativeAdContainer
        android:id="@+id/native_ad_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:layout_marginBottom="@dimen/dimen_16dp"
        android:background="@drawable/bg_shape_radio_white_12"
        android:padding="@dimen/dimen_16dp"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/v_advert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/iv_advert_logo"
                android:layout_width="@dimen/dimen_35dp"
                android:layout_height="@dimen/dimen_35dp" />

            <TextView
                android:id="@+id/tv_advert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_marginRight="@dimen/dimen_16dp"
                android:layout_toLeftOf="@+id/tv_download"
                android:layout_toRightOf="@+id/iv_advert_logo"
                android:textColor="@color/color_404040"
                android:textSize="@dimen/dimen_17sp" />

            <TextView
                android:id="@+id/tv_advert_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_advert"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_marginRight="@dimen/dimen_16dp"
                android:layout_toLeftOf="@+id/tv_download"
                android:layout_toRightOf="@+id/iv_advert_logo"
                android:textColor="@color/color_777777"
                android:textSize="@dimen/dimen_14sp" />

            <TextView
                android:id="@+id/tv_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_shape_radio_black_13"
                android:lines="1"
                android:paddingLeft="@dimen/dimen_11dp"
                android:paddingTop="@dimen/dimen_5dp"
                android:paddingRight="@dimen/dimen_11dp"
                android:paddingBottom="@dimen/dimen_5dp"
                android:text="@string/download_now"
                android:textColor="@color/color_777777"
                android:textSize="@dimen/dimen_12sp" />

            <!-- 原生广告的视频组件 -->
            <com.qq.e.ads.nativ.MediaView
                android:id="@+id/gdt_media_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_advert_content"
                android:layout_marginTop="@dimen/dimen_16dp" />

            <ImageView
                android:id="@+id/iv_advert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_advert_content"
                android:layout_marginTop="@dimen/dimen_16dp" />
        </RelativeLayout>
    </com.qq.e.ads.nativ.widget.NativeAdContainer>
</LinearLayout>