<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:background="@android:color/white">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_toolkit">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:background="@color/color_FF5454"
                android:orientation="vertical">

                <View
                    android:id="@+id/v_status_bar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_25dp" />

                <TextView
                    android:id="@+id/tv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_12dp"
                    android:drawableLeft="@drawable/common_icon_back_arrow_white"
                    android:drawablePadding="@dimen/dimen_10dp"
                    android:paddingTop="@dimen/dimen_5dp"
                    android:paddingRight="@dimen/dimen_10dp"
                    android:paddingBottom="@dimen/dimen_5dp"
                    android:text="@string/tool_one_key_speed"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_title_main" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dip"
                android:background="@color/color_FF5454">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <com.xiaoniu.cleanking.widget.FuturaRoundTextView
                        android:id="@+id/tv_junk_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/dimen_69sp"
                        tools:text="886" />

                    <com.xiaoniu.cleanking.widget.FuturaRoundTextView
                        android:id="@+id/tv_junk_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tv_junk_total"
                        android:layout_alignBottom="@+id/tv_junk_total"
                        android:layout_toEndOf="@+id/tv_junk_total"
                        android:baselineAlignBottom="true"
                        android:text="款"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/dimen_16sp" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_junk_unit"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:gravity="center"
                        android:text="常驻后台软件"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_18sp"
                        android:textStyle="bold" />

                </RelativeLayout>


                <!--    <TextView
                        android:id="@+id/tv_checked_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/iv_down_arrow"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/scan_result_checked_bg"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/dimen_13sp"
                        tools:text="666MB" />

                    <ImageView
                        android:id="@+id/iv_down_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/dimen_20dp"
                        android:background="@drawable/icon_checked_bg02" />
    -->
                <TextView
                    android:id="@+id/speed_up_value"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_30dp"
                    android:layout_alignParentBottom="true"
                    android:background="#26000000"
                    android:gravity="center"
                    tools:text="强力加速彻底清理后速度可提升20%"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_14sp" />
            </RelativeLayout>

            <!--    <FrameLayout
                    android:id="@+id/fl_ad_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />-->

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_content_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:itemCount="100" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <ImageView
        android:id="@+id/bottom_shadow"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_above="@+id/rl_toolkit"
        android:layout_gravity="bottom"
        android:background="@mipmap/wl"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/rl_toolkit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_68dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_clean_junk"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_46dp"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginRight="@dimen/dimen_16dp"
            android:background="@drawable/sp_scan_result_btn_bg"
            android:gravity="center"
            android:text="@string/tool_one_key_speed"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dimen_16sp"
            android:textStyle="bold" />
    </LinearLayout>


</RelativeLayout>