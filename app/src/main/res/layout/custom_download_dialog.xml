<?xml version="1.0" encoding="utf-8" standalone="no"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true">

        <LinearLayout
            android:id="@+id/popup_anima"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:minHeight="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_dialog"
            android:orientation="vertical">

            <TextView
                android:id="@+id/update_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="88dp"
                android:textColor="#5180EF"
                android:text="发现新版本"
                android:gravity="bottom|center"
                android:textSize="@dimen/dimen_18sp"/>

            <ProgressBar
                android:id="@+id/jjdxm_update_progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:layout_marginTop="17dp"
                android:background="@drawable/customer_dialog_progress_bg"
                android:progressDrawable="@drawable/progress_update_custom"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="43dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/jjdxm_update_progress_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:singleLine="true"
                    android:text="0%"
                    android:textColor="#5180EF"
                    android:textSize="@dimen/dimen_16sp"/>
            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/image"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/update_dialog_downloading" />


    </RelativeLayout>


</RelativeLayout>