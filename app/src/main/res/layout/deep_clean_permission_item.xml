<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/iv_deep_clean_icon"
        android:layout_width="@dimen/dimen_36dp"
        android:layout_height="@dimen/dimen_36dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:src="@drawable/ic_power" />

    <TextView
        android:id="@+id/tv_deep_clean_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_deep_clean_icon"
        android:layout_marginLeft="@dimen/dimen_12dp"
        android:layout_toRightOf="@+id/iv_deep_clean_icon"
        android:layout_marginTop="-4dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_title_secondary"
        tools:text="手机加速" />

    <TextView
        android:id="@+id/tv_deep_clean_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_deep_clean_title"
        android:layout_marginLeft="@dimen/dimen_12dp"
        android:layout_marginTop="@dimen/dimen_6dp"
        android:layout_toRightOf="@+id/iv_deep_clean_icon"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_tertiary"
        tools:text="深度清理内存垃圾，提高手机运行速度" />
    <View
        style="@style/CommonHLine"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>