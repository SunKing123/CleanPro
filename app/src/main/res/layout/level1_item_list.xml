<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/dimen_68dp"
                  android:background="@color/color_F7F8FA"
                  android:orientation="vertical"
                  android:paddingLeft="@dimen/dimen_16dp"
                  android:paddingRight="@dimen/dimen_16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/app_logo"
                android:layout_width="@dimen/dimen_36dp"
                android:layout_height="@dimen/dimen_36dp"/>

            <TextView
                android:id="@+id/text_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_8dp"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="拼多多"
                android:textColor="@color/color_333333"/>

            <TextView
                android:id="@+id/junk_size"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="已选123MB"
                android:textColor="@drawable/color_select_clean_detail"/>

            <ImageView
                android:id="@+id/icon_check"
                android:layout_width="@dimen/dimen_18dp"
                android:layout_height="@dimen/dimen_18dp"
                android:layout_marginLeft="@dimen/dimen_12dp"
                android:background="@drawable/icon_choose_selector"
                android:button="@null"
                android:checked="true"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/color_E6E6E6"/>

    </LinearLayout>
</LinearLayout>