<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_55dp"
        android:background="@color/color_4690FD"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_24dp"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:src="@mipmap/icon_left_arrow_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_12dp"
            android:text="聊天图片"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_18sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp"
        android:background="@color/color_4690FD"
        android:gravity="bottom"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/ll_img_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimen_5dp">

            <TextView
                android:id="@+id/txt_img_chat"
                android:layout_width="@dimen/dimen_100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="聊天图片"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_14sp" />

            <View
                android:id="@+id/view_line_chat"
                android:layout_width="@dimen/dimen_20dp"
                android:layout_height="@dimen/dimen_2dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:background="@color/white" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_img_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimen_5dp">

            <TextView
                android:id="@+id/txt_img_camera"
                android:layout_width="@dimen/dimen_100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="拍摄的图片"
                android:textColor="@color/color_b2ffffff"

                android:textSize="@dimen/dimen_14sp" />

            <View
                android:id="@+id/view_line_img_camera"
                android:layout_width="@dimen/dimen_20dp"
                android:layout_height="@dimen/dimen_2dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:background="@color/white"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_img_save_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimen_5dp">

            <TextView
                android:id="@+id/txt_img_download"
                android:layout_width="@dimen/dimen_100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="保存的图片"
                android:textColor="@color/color_b2ffffff"
                android:textSize="@dimen/dimen_14sp" />

            <View
                android:id="@+id/view_line_img_download"
                android:layout_width="@dimen/dimen_20dp"
                android:layout_height="@dimen/dimen_2dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:background="@color/white"
                android:visibility="invisible" />
        </LinearLayout>


    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_56dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_check_all"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"
            android:gravity="center|left">

            <ImageButton
                android:id="@+id/check_all"
                android:layout_width="@dimen/dimen_16dp"
                android:layout_height="@dimen/dimen_16dp"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:background="@drawable/bg_check"
                android:clickable="false" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全选"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/dimen_14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingRight="@dimen/dimen_16dp">

            <Button
                android:id="@+id/btn_del"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/dimen_106dp"
                android:layout_height="@dimen/dimen_36dp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:background="@drawable/bg_btn_del"
                android:enabled="false"
                android:text="删除"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_save"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/dimen_118dp"
                android:layout_height="@dimen/dimen_36dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_btn_del"
                android:enabled="false"
                android:text="保存到手机"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>