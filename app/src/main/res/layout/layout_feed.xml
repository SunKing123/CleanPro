<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_feeds"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/fl_top_nav"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            style="@style/top_iv_back"
            android:visibility="gone"
            android:layout_height="match_parent" />

        <com.xiaoniu.cleanking.widget.magicIndicator.MagicIndicator
            android:id="@+id/feed_indicator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="12dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_EDEDED" />

    <!-- title：56dp； fl_top_nav：56dp；  1dp;  bottom: 60-->
    <com.xiaoniu.cleanking.widget.MeasureViewPager
        android:id="@+id/feed_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:topHeightDp="173dp" />

</LinearLayout>


