<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_143dp"
    android:background="@drawable/icon_limit_award_bg"
    android:paddingTop="12dp"
    android:paddingBottom="10dp">
    
    
    <LinearLayout
        android:id="@+id/linear_award_tag01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="@dimen/dimen_6dp"
            android:layout_height="@dimen/dimen_15dp"
            android:background="@drawable/bg_black_corner"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_award_tag01"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:text="@string/limit_award_tag"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_18sp"
            android:textStyle="bold" />
    </LinearLayout>


    <com.xiaoniu.cleanking.widget.LuckBubbleView
        android:id="@+id/iv_golde_06"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_75dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        app:location="6"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_award_tag01"
        app:layout_constraintWidth_percent="0.25" />

    <com.xiaoniu.cleanking.widget.LuckBubbleView
        android:id="@+id/iv_golde_07"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_75dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        app:location="7"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/iv_golde_06"
        app:layout_constraintTop_toBottomOf="@+id/linear_award_tag01"
        app:layout_constraintWidth_percent="0.25" />

    <com.xiaoniu.cleanking.widget.LuckBubbleView
        android:id="@+id/iv_golde_08"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_75dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        app:location="8"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/iv_golde_07"
        app:layout_constraintTop_toBottomOf="@+id/linear_award_tag01"
        app:layout_constraintWidth_percent="0.25" />

    <com.xiaoniu.cleanking.widget.LuckBubbleView
        android:id="@+id/iv_golde_09"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_75dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        app:location="9"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/iv_golde_08"
        app:layout_constraintTop_toBottomOf="@+id/linear_award_tag01"
        app:layout_constraintWidth_percent="0.25" />


</androidx.constraintlayout.widget.ConstraintLayout>
