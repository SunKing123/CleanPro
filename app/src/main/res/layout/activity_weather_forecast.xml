<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/fl_weather_forecast_head_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_head_height"
        android:background="@color/white"
        android:paddingRight="@dimen/common_margin_right_12dp">

        <RelativeLayout
            android:id="@+id/rl_weather_forecast_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <ImageView
                android:id="@+id/iv_weather_forecast_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/weather_common_back_icon" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="天气预报"
                android:textColor="#ff262626"
                android:textSize="18dp" />
        </LinearLayout>

    </FrameLayout>


    <LinearLayout
        android:id="@+id/linear_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fl_weather_forecast_head_layout"
        android:orientation="vertical">

        <org.song.videoplayer.JKQSVideoView
            android:id="@+id/qs_videoview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_weather_forecast_publish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#ffb7b7b7"
            android:textSize="@dimen/dp_12"
            tools:text="中国天气网 13:37发布" />
    </LinearLayout>


    <FrameLayout
        android:id="@+id/weather_forecast_ad_fl"
        android:layout_below="@+id/linear_video"
        android:background="@drawable/ads_rect_corner_6_bg"
        android:layout_width="match_parent"
        android:layout_marginTop="36dp"
        android:layout_height="wrap_content"
        tools:visibility="visible" />
</RelativeLayout>