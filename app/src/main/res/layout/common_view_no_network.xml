<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ndroid="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/no_network_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="gone"
    tools:visibility="visible">

    <ImageView
        android:layout_width="148dp"
        android:layout_height="117dp"
        android:background="@drawable/icon_network" />

    <TextView
        android:id="@+id/no_network_tv"
        android:layout_width="137dp"
        android:layout_height="35dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/bg_green_confirm_fillet_30"
        android:gravity="center"
        android:text="刷新"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_noNetWork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="网络信号差，请刷新重试"
        android:textColor="#A4A4A4 "
        android:textSize="14sp" />
</LinearLayout>


