<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_4690FD"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_55dp"
            android:layout_weight="1"

            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/dimen_24dp"
                android:layout_height="@dimen/dimen_24dp"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:src="@mipmap/icon_left_arrow_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机瘦身"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_18sp" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_150dp"
        android:background="@color/color_4690FD">

        <TextView
            android:id="@+id/txt_space_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_26dp"
            android:text="23"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_55dp" />

        <TextView
            android:id="@+id/txt_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/txt_space_size"
            android:layout_marginLeft="@dimen/dimen_4dp"
            android:layout_marginTop="@dimen/dimen_14dp"
            android:layout_toRightOf="@id/txt_space_size"
            android:text="%"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_percentage"
            android:layout_alignLeft="@id/txt_percentage"
            android:text="已用空间"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txt_scan_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#1A000000"
            android:paddingLeft="@dimen/dimen_16dp"
            android:text="正在扫描"
            android:textColor="@color/white" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_video_file"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_57dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_16dp"
        android:paddingRight="@dimen/dimen_16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="视频文件"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_16sp" />


        <ImageView
            android:id="@+id/img_select"
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_24dp"
            android:src="@mipmap/icon_selected" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:background="@color/color_EDEDED" />

    <LinearLayout
        android:id="@+id/ll_system_space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_57dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_16dp"
        android:paddingRight="@dimen/dimen_16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="系统空间"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_16sp" />


        <ImageView
            android:id="@+id/img_select_system"
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_24dp"
            android:src="@mipmap/icon_selected" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:background="@color/color_EDEDED" />

</LinearLayout>
