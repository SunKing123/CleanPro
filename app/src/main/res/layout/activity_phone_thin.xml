<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_4690FD"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_55dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/dimen_35dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dimen_12dp"
                android:src="@mipmap/back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机瘦身"
                android:layout_marginLeft="@dimen/dimen_12dp"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_18sp" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/dimen_55dp"
        android:layout_width="match_parent"
        android:layout_height="263dp"
        android:gravity="center"
        android:background="@color/color_4690FD">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_space_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:gravity="right|top"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="110dp" />

        <TextView
            android:id="@+id/txt_percentage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_4dp"
            android:text="%"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:textSize="@dimen/dimen_24sp"
            android:textColor="@color/white" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_use_space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已用空间"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:textSize="@dimen/dimen_15sp"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/txt_scan_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_28dp"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:background="#1A000000"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_16dp"
            android:paddingRight="@dimen/dimen_16dp"
            android:singleLine="true"
            android:text="正在扫描"
            android:textColor="@color/white" />
    </RelativeLayout>
        <ImageView
            android:id="@+id/iv_scan_frame"
            android:layout_width="99dp"
            android:layout_height="319dp"
            android:src="@mipmap/icon_scanframe"
            />
    </FrameLayout>
    <LinearLayout
        android:id="@+id/ll_video_file"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_57dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingLeft="@dimen/dimen_16dp"
        android:paddingRight="@dimen/dimen_16dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="视频文件"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_16sp" />

            <ImageView
                android:id="@+id/img_progress"
                android:layout_width="@dimen/dimen_18dp"
                android:layout_height="@dimen/dimen_18dp"
                android:src="@mipmap/icon_pro"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:background="@color/color_EDEDED" />

    <LinearLayout
        android:id="@+id/ll_system_space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_57dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingLeft="@dimen/dimen_16dp"
        android:paddingRight="@dimen/dimen_16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="系统空间"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_16sp" />

            <ImageView
                android:id="@+id/img_progress_system"
                android:layout_width="@dimen/dimen_18dp"
                android:layout_height="@dimen/dimen_18dp"
                android:src="@mipmap/icon_pro" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:background="@color/color_EDEDED" />

</LinearLayout>
