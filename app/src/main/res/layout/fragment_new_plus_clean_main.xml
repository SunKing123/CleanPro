<?xml version="1.0" encoding="utf-8"?>
<com.xiaoniu.cleanking.ui.main.widget.MyRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F7F8FA"
    android:orientation="vertical"
    android:visibility="visible">

    <com.xiaoniu.cleanking.widget.CommonTitleLayout
        android:id="@+id/commonTitleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/v_top"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/commonTitleLayout"
        android:paddingLeft="@dimen/dimen_16dp"
        android:paddingRight="@dimen/dimen_16dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/app_name"
            android:textColor="@color/color_333333"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_withDraw"
            android:layout_width="40dp"
            android:layout_height="19dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/gradient_button_bg"
            android:gravity="center"
            android:text="提现"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_coin_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/tv_withDraw"
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/dp_15"
            android:textColor="#26DFB0"
            android:paddingBottom="2dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/image_home_coin"
            android:layout_toLeftOf="@+id/tv_coin_num"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@drawable/icon_home_gold"
            android:layout_marginRight="4dp"
            android:paddingBottom="2dp"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />

        <View
            android:background="@color/color_16C9C5"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_centerVertical="true"
            android:visibility="gone"/>
    </RelativeLayout>

    <!--完成动画-->
    <com.xiaoniu.cleanking.ui.newclean.view.ObservableScrollView
        android:id="@+id/layout_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_top"
        android:fadingEdgeLength="@dimen/dimen_0dp"
        android:overScrollMode="never"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layout_clean_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.xiaoniu.cleanking.widget.OneKeyCircleBtnView
                    android:id="@+id/view_lottie_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <com.xiaoniu.cleanking.ui.view.HomeMainTableView
                android:id="@+id/home_main_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@+id/ad_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="@dimen/main_home_marginTop"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone" />
            <!--android:background="@drawable/shadow"-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_home_marginTop"
                android:background="@drawable/shadow">

                <com.xiaoniu.cleanking.ui.view.HomeToolTableView
                    android:id="@+id/home_tool_table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/ad_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="@dimen/main_home_marginTop"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone" />

            <FrameLayout
                android:id="@+id/frame_deviceInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shadow"
                android:paddingTop="14dp"
                android:paddingBottom="24dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                />

            <com.xiaoniu.cleanking.widget.ClearCardView
                android:id="@+id/clear_card_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_home_marginTop" />

            <com.xiaoniu.cleanking.widget.ClearCardView
                android:id="@+id/clear_card_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_home_marginTop" />

            <FrameLayout
                android:id="@+id/ad_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_home_marginTop"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone" />
<!--        android:background="@drawable/shadow"-->
            <com.xiaoniu.cleanking.widget.ClearCardView
                android:id="@+id/clear_card_sound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_home_marginTop"
                android:layout_marginBottom="@dimen/dp_13" />
        </LinearLayout>
    </com.xiaoniu.cleanking.ui.newclean.view.ObservableScrollView>

    <com.xiaoniu.cleanking.ui.view.HomeInteractiveView
        android:id="@+id/image_interactive"
        android:layout_width="116dp"
        android:layout_height="52dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:src="@mipmap/icon_main_right_ad"
        android:scaleType="fitXY"
        android:visibility="gone" />

</com.xiaoniu.cleanking.ui.main.widget.MyRelativeLayout>
