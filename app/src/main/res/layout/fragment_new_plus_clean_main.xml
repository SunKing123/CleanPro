<?xml version="1.0" encoding="utf-8"?>
<com.xiaoniu.cleanking.ui.main.widget.MyRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F7F8FA"
    android:orientation="vertical"
    android:visibility="visible">

    <RelativeLayout
        android:id="@+id/v_top"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingLeft="@dimen/dimen_16dp"
        android:paddingRight="@dimen/dimen_16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/app_name"
            android:textColor="@color/color_333333"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_interaction"
            android:layout_width="@dimen/dimen_45dp"
            android:layout_height="@dimen/dimen_45dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:visibility="gone" />

    </RelativeLayout>

    <!--完成动画-->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/layout_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_top"
        android:fadingEdgeLength="@dimen/dimen_0dp"
        android:overScrollMode="never"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="7dp"
            android:paddingEnd="7dp">

            <RelativeLayout
                android:id="@+id/layout_clean_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.xiaoniu.cleanking.widget.OneKeyCircleButtonView
                    android:id="@+id/view_lottie_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="300dp">

                </com.xiaoniu.cleanking.widget.OneKeyCircleButtonView>

            </RelativeLayout>

            <com.xiaoniu.cleanking.ui.view.HomeMainTableView
                android:id="@+id/home_main_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.xiaoniu.cleanking.ui.view.HomeToolTableView
                android:id="@+id/home_tool_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <FrameLayout
                android:id="@+id/ad_one"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_100dp"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@color/colorAccent" />

            <com.xiaoniu.cleanking.widget.ClearCardView
                android:id="@+id/clear_card_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5" />

            <com.xiaoniu.cleanking.widget.ClearCardView
                android:id="@+id/clear_card_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5" />

            <FrameLayout
                android:id="@+id/ad_two"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_100dp"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@color/colorAccent" />

            <com.xiaoniu.cleanking.widget.ClearCardView
                android:id="@+id/clear_card_sound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.xiaoniu.cleanking.ui.view.HomeInteractiveView
        android:id="@+id/image_interactive"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="100dp"
        android:src="@drawable/icon_home_electric" />


</com.xiaoniu.cleanking.ui.main.widget.MyRelativeLayout>
