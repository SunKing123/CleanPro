<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/bg_blue_view"
        android:layout_width="280dp"
        android:layout_height="@dimen/dimen_25dp"
        android:background="@color/color_D9E8FF"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dimen_38dp"/>

   <LinearLayout
       android:layout_width="280dp"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       android:padding="@dimen/dimen_16dp"
       android:orientation="vertical">
       <TextView
           android:id="@+id/text_title"
           android:text="网易云音乐"
           app:layout_constraintLeft_toLeftOf="parent"
           android:textColor="@color/color_333333"
           android:textSize="@dimen/dimen_16sp"
           android:singleLine="true"
           android:ellipsize="end"
           android:gravity="center"
           android:layout_width="wrap_content"
           android:layout_height="@dimen/dimen_22dp"/>

       <FrameLayout
           android:layout_width="match_parent"
           android:layout_height="@dimen/dimen_25dp">
           <TextView
               android:id="@+id/text_tips"
               android:textSize="@dimen/dimen_12sp"
               android:textColor="@color/color_4690FD"
               android:text="@string/text_white_removed"
               android:gravity="center_vertical"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:visibility="gone"/>

           <TextView
               android:id="@+id/text_divider"
               android:background="@color/color_DEDEDE"
               android:layout_width="match_parent"
               android:layout_gravity="center_vertical"
               android:layout_height="1dp"
               android:visibility="visible"/>
       </FrameLayout>
        <TextView
            android:id="@+id/text_size"
            android:text="大小：420KB"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/dimen_12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
       <TextView
           android:id="@+id/text_trace"
           android:text="路径：/storage/emulated/Download/Br owser/CloudMusic-official-6.2.3.4672 90.apk"
           android:textColor="@color/color_999999"
           android:textSize="@dimen/dimen_12sp"
           android:lineSpacingExtra="5dp"
           android:layout_marginTop="@dimen/dimen_5dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/dimen_12dp"
           android:orientation="horizontal">
           <CheckBox
               android:id="@+id/icon_check"
               android:layout_width="@dimen/dimen_18dp"
               android:layout_height="@dimen/dimen_18dp"
               android:background="@drawable/icon_apk_white_choose_selector"
               android:button="@null"
               android:checked="false"/>

           <TextView
               android:textColor="@color/color_666666"
               android:text="@string/text_apk_white_ignore"
               android:layout_marginLeft="@dimen/dimen_12dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
       </LinearLayout>

       <TextView
           android:id="@+id/text_close"
           android:layout_marginTop="@dimen/dimen_20dp"
           android:layout_marginRight="@dimen/dimen_12dp"
           android:gravity="right"
           android:textSize="@dimen/dimen_15sp"
           android:textColor="@color/color_4690FD"
           android:text="@string/text_close"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>

   </LinearLayout>
</android.support.constraint.ConstraintLayout>