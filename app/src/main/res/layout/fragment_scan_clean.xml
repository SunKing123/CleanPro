<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_clean_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:id="@+id/iv_clean_bg01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="1"
        android:background="@drawable/icon_clean_bg01" />

    <TextView
        android:id="@+id/iv_clean_bg02"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="1"
        android:background="@drawable/icon_clean_bg02" />

    <TextView
        android:id="@+id/iv_clean_bg03"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="1"
        android:background="@drawable/icon_clean_bg03" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/view_lottie_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:scaleType="centerCrop" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/view_lottie_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="66">

        </TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:layout_weight="315"
            android:gravity="center">

            <com.xiaoniu.cleanking.widget.FuturaRoundTextView
                android:id="@+id/tv_clean_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:lines="1"
                android:maxWidth="@dimen/dimen_200dp"
                android:text="0.0"
                android:textColor="@color/white"
                android:textSize="90sp" />

            <com.xiaoniu.cleanking.widget.FuturaRoundTextView
                android:id="@+id/tv_clean_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_clean_count"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-8dp"
                android:text="MB"
                android:textColor="@color/white"
                android:textSize="32sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="339" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_12dp"
        android:layout_marginTop="@dimen/dimen_40dp"
        android:drawableLeft="@drawable/common_icon_back_arrow_white"
        android:drawablePadding="@dimen/dimen_10dp"
        android:paddingTop="@dimen/dimen_5dp"
        android:paddingRight="@dimen/dimen_10dp"
        android:paddingBottom="@dimen/dimen_5dp"
        android:text="@string/clean_junk"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dimen_20sp"
        android:visibility="gone" />
</RelativeLayout>