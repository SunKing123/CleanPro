<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/line_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_75dp"
        android:background="#28D3A0"
        android:paddingTop="@dimen/dimen_20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            style="@style/top_iv_back"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_title_name"
            style="@style/top_tv_title"
            android:layout_gravity="center_vertical"
            android:text="@string/game_quicken" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/viewt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_background"
            android:paddingLeft="@dimen/dimen_16dp"
            android:paddingTop="@dimen/dimen_16dp"
            android:paddingBottom="@dimen/dimen_8dp"
            android:text="@string/game_list_hint"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/dimen_12sp" />

        <RelativeLayout
            android:id="@+id/v_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_hint"
            android:background="@drawable/bg_recommend"
            android:paddingLeft="@dimen/dimen_16dp"
            android:paddingRight="@dimen/dimen_16dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/dimen_35dp"
                android:layout_height="@dimen/dimen_35dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_qq" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_12dp"
                android:layout_toRightOf="@+id/iv_icon"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_404040"
                    android:textSize="@dimen/dimen_17sp" />

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:alpha="0.4"
                    android:textColor="@color/color_404040"
                    android:textSize="@dimen/dimen_14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_shape_radio_black_13"
                android:paddingLeft="@dimen/dimen_11dp"
                android:paddingTop="@dimen/dimen_5dp"
                android:paddingRight="@dimen/dimen_11dp"
                android:paddingBottom="@dimen/dimen_5dp"
                android:text="@string/tool_now_clean"
                android:textColor="@color/color_777777"
                android:textSize="@dimen/dimen_12sp" />
        </RelativeLayout>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>