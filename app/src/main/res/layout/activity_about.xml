<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#06C581"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            style="@style/top_iv_back"
            app:layout_constraintBottom_toBottomOf="@id/view_top"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/view_top" />

        <TextView
            style="@style/top_tv_title"
            android:text="关于"
            app:layout_constraintBottom_toBottomOf="@id/view_top"
            app:layout_constraintLeft_toRightOf="@id/iv_back"
            app:layout_constraintTop_toTopOf="@id/view_top" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_logos"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_32dp"
        android:src="@mipmap/applogo" />

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:text="当前版本 V1.0.0"
        android:textColor="#999999"
        app:layout_constraintBottom_toBottomOf="@id/iv_logos" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_28dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/line_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dimen_16dp"
            android:paddingTop="@dimen/dimen_16dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:text="检查更新"
                android:textColor="#091A33" />

            <View
                android:layout_width="0px"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_newversion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_marginRight="@dimen/dimen_13dp"
                android:text="发现新版本"
                android:textColor="#FF5656"
                android:visibility="gone" />

            <ImageView
                android:layout_width="6dp"
                android:layout_height="10dp"
                android:layout_marginRight="@dimen/dimen_12dp"
                android:src="@mipmap/arrow_right" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:background="#EDEDED" />

        <LinearLayout
            android:id="@+id/line_xy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dimen_16dp"
            android:paddingTop="@dimen/dimen_16dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:text="服务协议"
                android:textColor="#091A33" />

            <View
                android:layout_width="0px"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="6dp"
                android:layout_height="10dp"
                android:layout_marginRight="@dimen/dimen_12dp"
                android:src="@mipmap/arrow_right" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:background="#EDEDED" />

        <LinearLayout
            android:id="@+id/line_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dimen_16dp"
            android:paddingTop="@dimen/dimen_16dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:text="分享好友"
                android:textColor="#091A33" />

            <View
                android:layout_width="0px"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="6dp"
                android:layout_height="10dp"
                android:layout_marginRight="@dimen/dimen_12dp"
                android:src="@mipmap/arrow_right" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:background="#EDEDED" />


    </LinearLayout>
</LinearLayout>