<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_display_imageview"
        android:layout_width="275dp"
        android:layout_height="206dp"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_per4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="5dp"
        app:layout_constraintRight_toRightOf="@id/image_display_imageview"
        app:layout_constraintTop_toTopOf="@id/image_display_imageview" />

    <ImageView
        android:id="@+id/iv_next"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="@id/image_display_imageview"
        app:layout_constraintRight_toRightOf="@id/image_display_imageview" />

    <ImageView
        android:id="@+id/iv_pre"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@id/image_display_imageview"
        app:layout_constraintRight_toLeftOf="@id/iv_next" />

    <ImageView
        android:id="@+id/iv_zhankai"
        android:layout_width="105dp"
        android:layout_height="36dp"
        android:src="@mipmap/icon_zhankai"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/image_display_imageview"
        app:layout_constraintRight_toRightOf="@id/image_display_imageview" />

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="45dp"
        android:layout_height="36dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/image_display_imageview"
        app:layout_constraintRight_toRightOf="@id/image_display_imageview" />
</android.support.constraint.ConstraintLayout>