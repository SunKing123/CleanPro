<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/dimen_16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_22dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="将清理46MB文件"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_16sp"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/text_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:lineSpacingExtra="@dimen/dimen_4dp"
            android:text="此次清理包含2个文件，清谨慎清理"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_cancel"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_36dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="取消"
                android:textSize="@dimen/dimen_15sp"/>

            <TextView
                android:id="@+id/text_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_12dp"
                android:gravity="right"
                android:text="@string/text_clean"
                android:textColor="@color/color_4690FD"
                android:textSize="@dimen/dimen_15sp"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>