<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/conslayout"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_photo_filelist_pic"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_marginBottom="@dimen/dimen_16dp"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_file"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="@dimen/dimen_200dp"
        android:layout_height="wrap_content"
        android:lines="1"
        android:layout_marginLeft="@dimen/dimen_60dp"
        android:text="msg-561123-8bd102.amr8bd1028bd1028bd102"
        android:textColor="#333333"
        android:textSize="@dimen/dimen_14sp"
        app:layout_constraintBottom_toTopOf="@id/tv_time"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintTop_toTopOf="@id/iv_photo_filelist_pic" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_8dp"
        android:layout_marginTop="@dimen/dimen_3dp"
        android:text="2019-01-07 12:00"
        android:textColor="#999999"
        android:textSize="@dimen/dimen_11sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_photo_filelist_pic"
        app:layout_constraintLeft_toRightOf="@id/iv_photo_filelist_pic"
        app:layout_constraintTop_toBottomOf="@id/tv_name" />

    <TextView
        android:id="@+id/tv_select"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginLeft="@dimen/dimen_8dp"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:background="@drawable/icon_select"
        android:textColor="#333333"
        app:layout_constraintBottom_toBottomOf="@id/iv_photo_filelist_pic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_photo_filelist_pic" />

    <TextView
        android:id="@+id/tv_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_8dp"
        android:text="600MB"
        android:textColor="#999999"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_photo_filelist_pic"
        app:layout_constraintRight_toLeftOf="@id/tv_select"
        app:layout_constraintTop_toTopOf="@id/iv_photo_filelist_pic" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:background="#EDEDED"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_photo_filelist_pic" />

</android.support.constraint.ConstraintLayout>