<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/v_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.qq.e.ads.nativ.widget.NativeAdContainer
                android:id="@+id/native_ad_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/v_advert"
                        android:layout_width="match_parent"
                        android:layout_height="500dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/bg_ad_screen">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/dimen_12dp"
                            android:layout_marginRight="@dimen/dimen_12dp"
                            android:background="@drawable/bg_ad_video">

                            <!-- 穿山甲视频组件 -->
                            <FrameLayout
                                android:id="@+id/v_video_chuanshanjia"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dimen_200dp"
                                android:layout_centerVertical="true"
                                android:scaleType="centerCrop"
                                android:visibility="gone" />

                            <!-- 优量汇原生广告的视频组件 -->
                            <com.qq.e.ads.nativ.MediaView
                                android:id="@+id/gdt_media_view"
                                android:layout_width="match_parent"
                                android:layout_centerVertical="true"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:id="@+id/iv_advert"
                                android:layout_width="match_parent"
                                android:layout_centerVertical="true"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:id="@+id/iv_close"
                                android:layout_width="@dimen/dimen_35dp"
                                android:layout_height="@dimen/dimen_35dp"
                                android:layout_alignParentRight="true"
                                android:layout_margin="@dimen/dimen_8dp"
                                android:src="@drawable/icon_close"
                                android:visibility="gone" />

                            <com.xiaoniu.cleanking.ui.newclean.view.RoundProgressBar
                                android:id="@+id/skip_view"
                                android:layout_width="@dimen/dimen_35dp"
                                android:layout_height="@dimen/dimen_35dp"
                                android:layout_alignParentRight="true"
                                android:layout_margin="@dimen/dimen_8dp"
                                android:visibility="gone"
                                app:isShowProgress="false"
                                app:progress="100"
                                app:progressStr="3s"
                                app:roundColor="@color/color_29D69F"
                                app:roundInsideColor="#50000000"
                                app:roundProgressColor="@color/color_747474"
                                app:roundWidth="1dp"
                                app:textProgressColor="@color/white"
                                app:textProgressSize="@dimen/dimen_14sp" />
                        </RelativeLayout>

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/iv_advert_logo"
                        android:layout_width="@dimen/dimen_50dp"
                        android:layout_height="@dimen/dimen_50dp"
                        android:layout_below="@+id/v_advert"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="-40dp" />

                    <RelativeLayout
                        android:id="@+id/v_download"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/iv_advert_logo">

                        <TextView
                            android:id="@+id/tv_advert"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="@dimen/dimen_10dp"
                            android:layout_marginTop="@dimen/dimen_16dp"
                            android:layout_marginRight="@dimen/dimen_10dp"
                            android:textColor="@color/color_404040"
                            android:textSize="@dimen/dimen_17sp" />

                        <TextView
                            android:id="@+id/tv_advert_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_advert"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="@dimen/dimen_10dp"
                            android:layout_marginTop="@dimen/dimen_16dp"
                            android:layout_marginRight="@dimen/dimen_10dp"
                            android:textColor="@color/color_777777"
                            android:textSize="@dimen/dimen_14sp" />

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/tv_download"
                            android:layout_width="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_height="@dimen/dimen_60dp"
                            android:layout_below="@+id/tv_advert_content"
                            android:layout_marginTop="@dimen/dimen_50dp" />
                    </RelativeLayout>


                </RelativeLayout>

            </com.qq.e.ads.nativ.widget.NativeAdContainer>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/v_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_close_error"
            android:layout_width="@dimen/dimen_35dp"
            android:layout_height="@dimen/dimen_35dp"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dimen_16dp"
            android:src="@drawable/icon_close" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@mipmap/icon_no_net" />

    </RelativeLayout>
</RelativeLayout>