<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutNotifyClean"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/icon_round" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCleanCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/layoutCleanIcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivIcon1"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginRight="4dp"
                android:contentDescription="@null"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivIcon2"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginRight="4dp"
                android:contentDescription="@null"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivIcon3"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginRight="4dp"
                android:contentDescription="@null"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivIcon4"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginRight="4dp"
                android:contentDescription="@null"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivIcon5"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginRight="4dp"
                android:contentDescription="@null"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvNotifyDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="等可清理"
                android:visibility="gone"
                android:singleLine="true"
                android:textColor="#666666"
                android:textSize="11sp" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnClean"
        android:layout_width="60dp"
        android:layout_height="26dp"
        android:background="@drawable/bg_btn_notify_clean_shape"
        android:text="清理"
        android:textColor="#ffffff"
        android:textSize="14sp" />

</LinearLayout>