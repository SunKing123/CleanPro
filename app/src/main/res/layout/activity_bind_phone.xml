<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white"
    android:orientation="vertical">


    <com.xiaoniu.cleanking.widget.CommonTitleLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="208dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="就差最后一步啦，绑定手机号即可提现"
            android:textColor="#A4A4A4"
            android:textSize="@dimen/dimen_15dp" />

        <RelativeLayout
            android:id="@+id/rl_bind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_14dp">

            <TextView
                android:id="@+id/iv_bind"
                android:layout_width="@dimen/dimen_240dp"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_green_confirm_fillet_30"
                android:enabled="false"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:gravity="center"
                android:text="本机号码一键安全登录"
                android:textColor="@color/common_white"
                android:textSize="@dimen/dimen_16dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/iv_bind"
                android:src="@mipmap/icon_recommend" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_manual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:text="验证码绑定"
            android:textColor="#5CD0FF"
            android:textSize="@dimen/dimen_16sp" />
    </LinearLayout>


</LinearLayout>